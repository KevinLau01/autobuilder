<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testpro.feedBack.bean.FeedBack">
	<resultMap type="FeedBack" id="feedBackResultMap">
		<result property="id" column="id" />
		<result property="courseId" column="course_id" />
		<result property="classId" column="class_id" />
		<result property="stuId" column="stu_id" />
		<result property="teacherId" column="teacher_id" />
		<result property="assistantId" column="assistant_id" />
		<result property="teacherLevel" column="teacher_level" />
		<result property="assistantLevel" column="assistant_level" />
		<result property="courseTime" column="course_time" />
		<result property="feedWord" column="feed_word" />
		<result property="status" column="status" />
		<result property="mainScore" column="main_score" />
		<result property="assistScore" column="assist_score" />
		<result property="dealFeed" column="deal_feed" />
		<result property="createdAt" column="created_at" />
		<result property="updatedAt" column="updated_at" />
		<result property="deletedAt" column="deleted_at" />
	</resultMap>
	
	<sql id="table_columns">
		id,
		course_id,
		class_id,
		stu_id,
		teacher_id,
		assistant_id,
		teacher_level,
		assistant_level,
		course_time,
		feed_word,
		status,
		main_score,
		assist_score,
		deal_feed,
		created_at,
		updated_at,
		deleted_at
    </sql>
	<sql id="entity_properties">
		#{id},
		#{courseId},
		#{classId},
		#{stuId},
		#{teacherId},
		#{assistantId},
		#{teacherLevel},
		#{assistantLevel},
		#{courseTime},
		#{feedWord},
		#{status},
		#{mainScore},
		#{assistScore},
		#{dealFeed},
		#{createdAt},
		#{updatedAt},
		#{deletedAt}
	</sql>
	
	<!-- 适用于主键自增类型 -->
	<insert id="save" parameterType="FeedBack" useGeneratedKeys="true" keyProperty="id">
		insert into feed_back( <include refid="table_columns" /> ) 
		values ( <include refid="entity_properties" /> )
	</insert>
	
	<delete id="deleteByIds">
		delete from feed_back
		where id in
		<foreach item="item" collection="array" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
	
	<update id="update" parameterType="FeedBack">
		update feed_back 
		<trim prefix="set" suffixOverrides=",">
			<if test="courseId != null and courseId != ''">course_id = #{courseId},</if>
			<if test="classId != null and classId != ''">class_id = #{classId},</if>
			<if test="stuId != null and stuId != ''">stu_id = #{stuId},</if>
			<if test="teacherId != null and teacherId != ''">teacher_id = #{teacherId},</if>
			<if test="assistantId != null and assistantId != ''">assistant_id = #{assistantId},</if>
			<if test="teacherLevel != null and teacherLevel != ''">teacher_level = #{teacherLevel},</if>
			<if test="assistantLevel != null and assistantLevel != ''">assistant_level = #{assistantLevel},</if>
			<if test="courseTime != null and courseTime != ''">course_time = #{courseTime},</if>
			<if test="feedWord != null and feedWord != ''">feed_word = #{feedWord},</if>
			<if test="status != null and status != ''">status = #{status},</if>
			<if test="mainScore != null and mainScore != ''">main_score = #{mainScore},</if>
			<if test="assistScore != null and assistScore != ''">assist_score = #{assistScore},</if>
			<if test="dealFeed != null and dealFeed != ''">deal_feed = #{dealFeed},</if>
			<if test="createdAt != null and createdAt != ''">created_at = #{createdAt},</if>
			<if test="updatedAt != null and updatedAt != ''">updated_at = #{updatedAt},</if>
			<if test="deletedAt != null and deletedAt != ''">deleted_at = #{deletedAt},</if>
		</trim>
		<where>id = #{id}</where>
	</update>
	
	<select id="findById" resultMap="feedBackResultMap" parameterType="String" >
		select <include refid="table_columns" />
		from feed_back
		where id = #{id}
	</select>
	
	<select id="queryAll" resultMap="feedBackResultMap">
		select <include refid="table_columns" /> 
		from feed_back
	</select>
	
	<!-- 使用like用法：columnName like concat('%',#columnName#,'%') -->
	<sql id="page_where">
		<trim prefix="where" prefixOverrides="and | or ">
			<if test="courseId != null and courseId != ''">and course_id = #{courseId}</if>
			<if test="classId != null and classId != ''">and class_id = #{classId}</if>
			<if test="stuId != null and stuId != ''">and stu_id = #{stuId}</if>
			<if test="teacherId != null and teacherId != ''">and teacher_id = #{teacherId}</if>
			<if test="assistantId != null and assistantId != ''">and assistant_id = #{assistantId}</if>
			<if test="teacherLevel != null and teacherLevel != ''">and teacher_level = #{teacherLevel}</if>
			<if test="assistantLevel != null and assistantLevel != ''">and assistant_level = #{assistantLevel}</if>
			<if test="courseTime != null and courseTime != ''">and course_time = #{courseTime}</if>
			<if test="feedWord != null and feedWord != ''">and feed_word = #{feedWord}</if>
			<if test="status != null and status != ''">and status = #{status}</if>
			<if test="mainScore != null and mainScore != ''">and main_score = #{mainScore}</if>
			<if test="assistScore != null and assistScore != ''">and assist_score = #{assistScore}</if>
			<if test="dealFeed != null and dealFeed != ''">and deal_feed = #{dealFeed}</if>
			<if test="createdAt != null and createdAt != ''">and created_at = #{createdAt}</if>
			<if test="updatedAt != null and updatedAt != ''">and updated_at = #{updatedAt}</if>
			<if test="deletedAt != null and deletedAt != ''">and deleted_at = #{deletedAt}</if>
		</trim>
	</sql>
	
	<select id="page" resultMap="feedBackResultMap" parameterType="FeedBackSearch">
		select <include refid="table_columns" />
		from feed_back
		<include refid="page_where" />
		limit #{firstIndex},#{pageSize}
	</select>
	
	<select id="pageCount" resultType="int" parameterType="FeedBackSearch">
		select count(id) from feed_back
		<include refid="page_where" />
	</select>
	
	<!-- 其他自定义SQL -->
	
</mapper>