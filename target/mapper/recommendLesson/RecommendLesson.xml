<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testpro.recommendLesson.bean.RecommendLesson">
	<resultMap type="RecommendLesson" id="recommendLessonResultMap">
		<result property="id" column="id" />
		<result property="classId" column="class_id" />
		<result property="courseId" column="course_id" />
		<result property="courseName" column="course_name" />
		<result property="className" column="class_name" />
		<result property="teacherId" column="teacher_id" />
		<result property="teacherName" column="teacher_name" />
		<result property="assistantId" column="assistant_id" />
		<result property="assistantName" column="assistant_name" />
		<result property="coursePic" column="course_pic" />
		<result property="courseUrl" column="course_url" />
		<result property="courseTime" column="course_time" />
		<result property="status" column="status" />
		<result property="level" column="level" />
		<result property="price" column="price" />
		<result property="subject" column="subject" />
		<result property="recommend" column="recommend" />
		<result property="title" column="title" />
		<result property="picUrl" column="pic_url" />
		<result property="linkUrl" column="link_url" />
		<result property="createdtime" column="createdtime" />
		<result property="updatetime" column="updatetime" />
		<result property="deleted" column="deleted" />
		<result property="createdUser" column="createdUser" />
		<result property="updateUser" column="updateUser" />
	</resultMap>
	
	<sql id="table_columns">
		id,
		class_id,
		course_id,
		course_name,
		class_name,
		teacher_id,
		teacher_name,
		assistant_id,
		assistant_name,
		course_pic,
		course_url,
		course_time,
		status,
		level,
		price,
		subject,
		recommend,
		title,
		pic_url,
		link_url,
		createdtime,
		updatetime,
		deleted,
		createdUser,
		updateUser
    </sql>
	<sql id="entity_properties">
		#{id},
		#{classId},
		#{courseId},
		#{courseName},
		#{className},
		#{teacherId},
		#{teacherName},
		#{assistantId},
		#{assistantName},
		#{coursePic},
		#{courseUrl},
		#{courseTime},
		#{status},
		#{level},
		#{price},
		#{subject},
		#{recommend},
		#{title},
		#{picUrl},
		#{linkUrl},
		#{createdtime},
		#{updatetime},
		#{deleted},
		#{createdUser},
		#{updateUser}
	</sql>
	
	<!-- 适用于主键自增类型 -->
	<insert id="save" parameterType="RecommendLesson" useGeneratedKeys="true" keyProperty="id">
		insert into recommend_lesson( <include refid="table_columns" /> ) 
		values ( <include refid="entity_properties" /> )
	</insert>
	
	<delete id="deleteByIds">
		delete from recommend_lesson
		where id in
		<foreach item="item" collection="array" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
	
	<update id="update" parameterType="RecommendLesson">
		update recommend_lesson 
		<trim prefix="set" suffixOverrides=",">
			<if test="classId != null and classId != ''">class_id = #{classId},</if>
			<if test="courseId != null and courseId != ''">course_id = #{courseId},</if>
			<if test="courseName != null and courseName != ''">course_name = #{courseName},</if>
			<if test="className != null and className != ''">class_name = #{className},</if>
			<if test="teacherId != null and teacherId != ''">teacher_id = #{teacherId},</if>
			<if test="teacherName != null and teacherName != ''">teacher_name = #{teacherName},</if>
			<if test="assistantId != null and assistantId != ''">assistant_id = #{assistantId},</if>
			<if test="assistantName != null and assistantName != ''">assistant_name = #{assistantName},</if>
			<if test="coursePic != null and coursePic != ''">course_pic = #{coursePic},</if>
			<if test="courseUrl != null and courseUrl != ''">course_url = #{courseUrl},</if>
			<if test="courseTime != null and courseTime != ''">course_time = #{courseTime},</if>
			<if test="status != null and status != ''">status = #{status},</if>
			<if test="level != null and level != ''">level = #{level},</if>
			<if test="price != null and price != ''">price = #{price},</if>
			<if test="subject != null and subject != ''">subject = #{subject},</if>
			<if test="recommend != null and recommend != ''">recommend = #{recommend},</if>
			<if test="title != null and title != ''">title = #{title},</if>
			<if test="picUrl != null and picUrl != ''">pic_url = #{picUrl},</if>
			<if test="linkUrl != null and linkUrl != ''">link_url = #{linkUrl},</if>
			<if test="createdtime != null and createdtime != ''">createdtime = #{createdtime},</if>
			<if test="updatetime != null and updatetime != ''">updatetime = #{updatetime},</if>
			<if test="deleted != null and deleted != ''">deleted = #{deleted},</if>
			<if test="createdUser != null and createdUser != ''">createdUser = #{createdUser},</if>
			<if test="updateUser != null and updateUser != ''">updateUser = #{updateUser},</if>
		</trim>
		<where>id = #{id}</where>
	</update>
	
	<select id="findById" resultMap="recommendLessonResultMap" parameterType="String" >
		select <include refid="table_columns" />
		from recommend_lesson
		where id = #{id}
	</select>
	
	<select id="queryAll" resultMap="recommendLessonResultMap">
		select <include refid="table_columns" /> 
		from recommend_lesson
	</select>
	
	<!-- 使用like用法：columnName like concat('%',#columnName#,'%') -->
	<sql id="page_where">
		<trim prefix="where" prefixOverrides="and | or ">
			<if test="classId != null and classId != ''">and class_id = #{classId}</if>
			<if test="courseId != null and courseId != ''">and course_id = #{courseId}</if>
			<if test="courseName != null and courseName != ''">and course_name = #{courseName}</if>
			<if test="className != null and className != ''">and class_name = #{className}</if>
			<if test="teacherId != null and teacherId != ''">and teacher_id = #{teacherId}</if>
			<if test="teacherName != null and teacherName != ''">and teacher_name = #{teacherName}</if>
			<if test="assistantId != null and assistantId != ''">and assistant_id = #{assistantId}</if>
			<if test="assistantName != null and assistantName != ''">and assistant_name = #{assistantName}</if>
			<if test="coursePic != null and coursePic != ''">and course_pic = #{coursePic}</if>
			<if test="courseUrl != null and courseUrl != ''">and course_url = #{courseUrl}</if>
			<if test="courseTime != null and courseTime != ''">and course_time = #{courseTime}</if>
			<if test="status != null and status != ''">and status = #{status}</if>
			<if test="level != null and level != ''">and level = #{level}</if>
			<if test="price != null and price != ''">and price = #{price}</if>
			<if test="subject != null and subject != ''">and subject = #{subject}</if>
			<if test="recommend != null and recommend != ''">and recommend = #{recommend}</if>
			<if test="title != null and title != ''">and title = #{title}</if>
			<if test="picUrl != null and picUrl != ''">and pic_url = #{picUrl}</if>
			<if test="linkUrl != null and linkUrl != ''">and link_url = #{linkUrl}</if>
			<if test="createdtime != null and createdtime != ''">and createdtime = #{createdtime}</if>
			<if test="updatetime != null and updatetime != ''">and updatetime = #{updatetime}</if>
			<if test="deleted != null and deleted != ''">and deleted = #{deleted}</if>
			<if test="createdUser != null and createdUser != ''">and createdUser = #{createdUser}</if>
			<if test="updateUser != null and updateUser != ''">and updateUser = #{updateUser}</if>
		</trim>
	</sql>
	
	<select id="page" resultMap="recommendLessonResultMap" parameterType="RecommendLessonSearch">
		select <include refid="table_columns" />
		from recommend_lesson
		<include refid="page_where" />
		limit #{firstIndex},#{pageSize}
	</select>
	
	<select id="pageCount" resultType="int" parameterType="RecommendLessonSearch">
		select count(id) from recommend_lesson
		<include refid="page_where" />
	</select>
	
	<!-- 其他自定义SQL -->
	
</mapper>