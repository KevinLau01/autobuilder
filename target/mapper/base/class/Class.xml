<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testpro.base.class.bean.Class">
	<resultMap type="Class" id="classResultMap">
		<result property="id" column="id" />
		<result property="teacherId" column="teacher_id" />
		<result property="teacherName" column="teacher_name" />
		<result property="name" column="name" />
		<result property="schoolId" column="school_id" />
		<result property="grade" column="grade" />
		<result property="organizationId" column="organization_id" />
		<result property="deleted" column="deleted" />
		<result property="createdtime" column="createdtime" />
		<result property="createdUser" column="createdUser" />
		<result property="updatetime" column="updatetime" />
		<result property="updateUser" column="updateUser" />
	</resultMap>
	
	<sql id="table_columns">
		id,
		teacher_id,
		teacher_name,
		name,
		school_id,
		grade,
		organization_id,
		deleted,
		createdtime,
		createdUser,
		updatetime,
		updateUser
    </sql>
	<sql id="entity_properties">
		#{id},
		#{teacherId},
		#{teacherName},
		#{name},
		#{schoolId},
		#{grade},
		#{organizationId},
		#{deleted},
		#{createdtime},
		#{createdUser},
		#{updatetime},
		#{updateUser}
	</sql>
	
	<!-- 适用于主键自增类型 -->
	<insert id="save" parameterType="Class" useGeneratedKeys="true" keyProperty="id">
		insert into base_class( <include refid="table_columns" /> ) 
		values ( <include refid="entity_properties" /> )
	</insert>
	
	<delete id="deleteByIds">
		delete from base_class
		where id in
		<foreach item="item" collection="array" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
	
	<update id="update" parameterType="Class">
		update base_class 
		<trim prefix="set" suffixOverrides=",">
			<if test="teacherId != null and teacherId != ''">teacher_id = #{teacherId},</if>
			<if test="teacherName != null and teacherName != ''">teacher_name = #{teacherName},</if>
			<if test="name != null and name != ''">name = #{name},</if>
			<if test="schoolId != null and schoolId != ''">school_id = #{schoolId},</if>
			<if test="grade != null and grade != ''">grade = #{grade},</if>
			<if test="organizationId != null and organizationId != ''">organization_id = #{organizationId},</if>
			<if test="deleted != null and deleted != ''">deleted = #{deleted},</if>
			<if test="createdtime != null and createdtime != ''">createdtime = #{createdtime},</if>
			<if test="createdUser != null and createdUser != ''">createdUser = #{createdUser},</if>
			<if test="updatetime != null and updatetime != ''">updatetime = #{updatetime},</if>
			<if test="updateUser != null and updateUser != ''">updateUser = #{updateUser},</if>
		</trim>
		<where>id = #{id}</where>
	</update>
	
	<select id="findById" resultMap="classResultMap" parameterType="String" >
		select <include refid="table_columns" />
		from base_class
		where id = #{id}
	</select>
	
	<select id="queryAll" resultMap="classResultMap">
		select <include refid="table_columns" /> 
		from base_class
	</select>
	
	<!-- 使用like用法：columnName like concat('%',#columnName#,'%') -->
	<sql id="page_where">
		<trim prefix="where" prefixOverrides="and | or ">
			<if test="teacherId != null and teacherId != ''">and teacher_id = #{teacherId}</if>
			<if test="teacherName != null and teacherName != ''">and teacher_name = #{teacherName}</if>
			<if test="name != null and name != ''">and name = #{name}</if>
			<if test="schoolId != null and schoolId != ''">and school_id = #{schoolId}</if>
			<if test="grade != null and grade != ''">and grade = #{grade}</if>
			<if test="organizationId != null and organizationId != ''">and organization_id = #{organizationId}</if>
			<if test="deleted != null and deleted != ''">and deleted = #{deleted}</if>
			<if test="createdtime != null and createdtime != ''">and createdtime = #{createdtime}</if>
			<if test="createdUser != null and createdUser != ''">and createdUser = #{createdUser}</if>
			<if test="updatetime != null and updatetime != ''">and updatetime = #{updatetime}</if>
			<if test="updateUser != null and updateUser != ''">and updateUser = #{updateUser}</if>
		</trim>
	</sql>
	
	<select id="page" resultMap="classResultMap" parameterType="ClassSearch">
		select <include refid="table_columns" />
		from base_class
		<include refid="page_where" />
		limit #{firstIndex},#{pageSize}
	</select>
	
	<select id="pageCount" resultType="int" parameterType="ClassSearch">
		select count(id) from base_class
		<include refid="page_where" />
	</select>
	
	<!-- 其他自定义SQL -->
	
</mapper>