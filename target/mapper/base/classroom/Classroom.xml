<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testpro.base.classroom.bean.Classroom">
	<resultMap type="Classroom" id="classroomResultMap">
		<result property="id" column="id" />
		<result property="schoolId" column="school_id" />
		<result property="name" column="name" />
		<result property="clientId" column="client_id" />
		<result property="address" column="address" />
		<result property="deleted" column="deleted" />
		<result property="createdtime" column="createdtime" />
		<result property="createdUser" column="createdUser" />
		<result property="updatetime" column="updatetime" />
		<result property="updateUser" column="updateUser" />
	</resultMap>
	
	<sql id="table_columns">
		id,
		school_id,
		name,
		client_id,
		address,
		deleted,
		createdtime,
		createdUser,
		updatetime,
		updateUser
    </sql>
	<sql id="entity_properties">
		#{id},
		#{schoolId},
		#{name},
		#{clientId},
		#{address},
		#{deleted},
		#{createdtime},
		#{createdUser},
		#{updatetime},
		#{updateUser}
	</sql>
	
	<!-- 适用于主键自增类型 -->
	<insert id="save" parameterType="Classroom" useGeneratedKeys="true" keyProperty="id">
		insert into base_classroom( <include refid="table_columns" /> ) 
		values ( <include refid="entity_properties" /> )
	</insert>
	
	<delete id="deleteByIds">
		delete from base_classroom
		where id in
		<foreach item="item" collection="array" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
	
	<update id="update" parameterType="Classroom">
		update base_classroom 
		<trim prefix="set" suffixOverrides=",">
			<if test="schoolId != null and schoolId != ''">school_id = #{schoolId},</if>
			<if test="name != null and name != ''">name = #{name},</if>
			<if test="clientId != null and clientId != ''">client_id = #{clientId},</if>
			<if test="address != null and address != ''">address = #{address},</if>
			<if test="deleted != null and deleted != ''">deleted = #{deleted},</if>
			<if test="createdtime != null and createdtime != ''">createdtime = #{createdtime},</if>
			<if test="createdUser != null and createdUser != ''">createdUser = #{createdUser},</if>
			<if test="updatetime != null and updatetime != ''">updatetime = #{updatetime},</if>
			<if test="updateUser != null and updateUser != ''">updateUser = #{updateUser},</if>
		</trim>
		<where>id = #{id}</where>
	</update>
	
	<select id="findById" resultMap="classroomResultMap" parameterType="String" >
		select <include refid="table_columns" />
		from base_classroom
		where id = #{id}
	</select>
	
	<select id="queryAll" resultMap="classroomResultMap">
		select <include refid="table_columns" /> 
		from base_classroom
	</select>
	
	<!-- 使用like用法：columnName like concat('%',#columnName#,'%') -->
	<sql id="page_where">
		<trim prefix="where" prefixOverrides="and | or ">
			<if test="schoolId != null and schoolId != ''">and school_id = #{schoolId}</if>
			<if test="name != null and name != ''">and name = #{name}</if>
			<if test="clientId != null and clientId != ''">and client_id = #{clientId}</if>
			<if test="address != null and address != ''">and address = #{address}</if>
			<if test="deleted != null and deleted != ''">and deleted = #{deleted}</if>
			<if test="createdtime != null and createdtime != ''">and createdtime = #{createdtime}</if>
			<if test="createdUser != null and createdUser != ''">and createdUser = #{createdUser}</if>
			<if test="updatetime != null and updatetime != ''">and updatetime = #{updatetime}</if>
			<if test="updateUser != null and updateUser != ''">and updateUser = #{updateUser}</if>
		</trim>
	</sql>
	
	<select id="page" resultMap="classroomResultMap" parameterType="ClassroomSearch">
		select <include refid="table_columns" />
		from base_classroom
		<include refid="page_where" />
		limit #{firstIndex},#{pageSize}
	</select>
	
	<select id="pageCount" resultType="int" parameterType="ClassroomSearch">
		select count(id) from base_classroom
		<include refid="page_where" />
	</select>
	
	<!-- 其他自定义SQL -->
	
</mapper>