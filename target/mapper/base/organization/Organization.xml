<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testpro.base.organization.bean.Organization">
	<resultMap type="Organization" id="organizationResultMap">
		<result property="id" column="id" />
		<result property="name" column="name" />
		<result property="description" column="description" />
		<result property="accessKey" column="access_key" />
		<result property="securityKey" column="security_key" />
		<result property="type" column="type" />
		<result property="deleted" column="deleted" />
		<result property="createdtime" column="createdtime" />
		<result property="createdUser" column="createdUser" />
		<result property="updatetime" column="updatetime" />
		<result property="updateUser" column="updateUser" />
	</resultMap>
	
	<sql id="table_columns">
		id,
		name,
		description,
		access_key,
		security_key,
		type,
		deleted,
		createdtime,
		createdUser,
		updatetime,
		updateUser
    </sql>
	<sql id="entity_properties">
		#{id},
		#{name},
		#{description},
		#{accessKey},
		#{securityKey},
		#{type},
		#{deleted},
		#{createdtime},
		#{createdUser},
		#{updatetime},
		#{updateUser}
	</sql>
	
	<!-- 适用于主键自增类型 -->
	<insert id="save" parameterType="Organization" useGeneratedKeys="true" keyProperty="id">
		insert into base_organization( <include refid="table_columns" /> ) 
		values ( <include refid="entity_properties" /> )
	</insert>
	
	<delete id="deleteByIds">
		delete from base_organization
		where id in
		<foreach item="item" collection="array" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
	
	<update id="update" parameterType="Organization">
		update base_organization 
		<trim prefix="set" suffixOverrides=",">
			<if test="name != null and name != ''">name = #{name},</if>
			<if test="description != null and description != ''">description = #{description},</if>
			<if test="accessKey != null and accessKey != ''">access_key = #{accessKey},</if>
			<if test="securityKey != null and securityKey != ''">security_key = #{securityKey},</if>
			<if test="type != null and type != ''">type = #{type},</if>
			<if test="deleted != null and deleted != ''">deleted = #{deleted},</if>
			<if test="createdtime != null and createdtime != ''">createdtime = #{createdtime},</if>
			<if test="createdUser != null and createdUser != ''">createdUser = #{createdUser},</if>
			<if test="updatetime != null and updatetime != ''">updatetime = #{updatetime},</if>
			<if test="updateUser != null and updateUser != ''">updateUser = #{updateUser},</if>
		</trim>
		<where>id = #{id}</where>
	</update>
	
	<select id="findById" resultMap="organizationResultMap" parameterType="String" >
		select <include refid="table_columns" />
		from base_organization
		where id = #{id}
	</select>
	
	<select id="queryAll" resultMap="organizationResultMap">
		select <include refid="table_columns" /> 
		from base_organization
	</select>
	
	<!-- 使用like用法：columnName like concat('%',#columnName#,'%') -->
	<sql id="page_where">
		<trim prefix="where" prefixOverrides="and | or ">
			<if test="name != null and name != ''">and name = #{name}</if>
			<if test="description != null and description != ''">and description = #{description}</if>
			<if test="accessKey != null and accessKey != ''">and access_key = #{accessKey}</if>
			<if test="securityKey != null and securityKey != ''">and security_key = #{securityKey}</if>
			<if test="type != null and type != ''">and type = #{type}</if>
			<if test="deleted != null and deleted != ''">and deleted = #{deleted}</if>
			<if test="createdtime != null and createdtime != ''">and createdtime = #{createdtime}</if>
			<if test="createdUser != null and createdUser != ''">and createdUser = #{createdUser}</if>
			<if test="updatetime != null and updatetime != ''">and updatetime = #{updatetime}</if>
			<if test="updateUser != null and updateUser != ''">and updateUser = #{updateUser}</if>
		</trim>
	</sql>
	
	<select id="page" resultMap="organizationResultMap" parameterType="OrganizationSearch">
		select <include refid="table_columns" />
		from base_organization
		<include refid="page_where" />
		limit #{firstIndex},#{pageSize}
	</select>
	
	<select id="pageCount" resultType="int" parameterType="OrganizationSearch">
		select count(id) from base_organization
		<include refid="page_where" />
	</select>
	
	<!-- 其他自定义SQL -->
	
</mapper>