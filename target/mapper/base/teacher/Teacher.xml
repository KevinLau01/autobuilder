<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testpro.base.teacher.bean.Teacher">
	<resultMap type="Teacher" id="teacherResultMap">
		<result property="userId" column="user_id" />
		<result property="id" column="id" />
		<result property="schoolId" column="school_id" />
		<result property="name" column="name" />
		<result property="telphone" column="telphone" />
		<result property="address" column="address" />
		<result property="remark" column="remark" />
		<result property="level" column="level" />
		<result property="technicalTitle" column="technical_title" />
		<result property="headImg" column="head_img" />
		<result property="deleted" column="deleted" />
		<result property="createdtime" column="createdtime" />
		<result property="createdUser" column="createdUser" />
		<result property="updatetime" column="updatetime" />
		<result property="updateUser" column="updateUser" />
	</resultMap>
	
	<sql id="table_columns">
		user_id,
		id,
		school_id,
		name,
		telphone,
		address,
		remark,
		level,
		technical_title,
		head_img,
		deleted,
		createdtime,
		createdUser,
		updatetime,
		updateUser
    </sql>
	<sql id="entity_properties">
		#{userId},
		#{id},
		#{schoolId},
		#{name},
		#{telphone},
		#{address},
		#{remark},
		#{level},
		#{technicalTitle},
		#{headImg},
		#{deleted},
		#{createdtime},
		#{createdUser},
		#{updatetime},
		#{updateUser}
	</sql>
	
	<!-- 适用于主键自增类型 -->
	<insert id="save" parameterType="Teacher" useGeneratedKeys="true" keyProperty="id">
		insert into base_teacher( <include refid="table_columns" /> ) 
		values ( <include refid="entity_properties" /> )
	</insert>
	
	<delete id="deleteByIds">
		delete from base_teacher
		where id in
		<foreach item="item" collection="array" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
	
	<update id="update" parameterType="Teacher">
		update base_teacher 
		<trim prefix="set" suffixOverrides=",">
			<if test="id != null and id != ''">id = #{id},</if>
			<if test="schoolId != null and schoolId != ''">school_id = #{schoolId},</if>
			<if test="name != null and name != ''">name = #{name},</if>
			<if test="telphone != null and telphone != ''">telphone = #{telphone},</if>
			<if test="address != null and address != ''">address = #{address},</if>
			<if test="remark != null and remark != ''">remark = #{remark},</if>
			<if test="level != null and level != ''">level = #{level},</if>
			<if test="technicalTitle != null and technicalTitle != ''">technical_title = #{technicalTitle},</if>
			<if test="headImg != null and headImg != ''">head_img = #{headImg},</if>
			<if test="deleted != null and deleted != ''">deleted = #{deleted},</if>
			<if test="createdtime != null and createdtime != ''">createdtime = #{createdtime},</if>
			<if test="createdUser != null and createdUser != ''">createdUser = #{createdUser},</if>
			<if test="updatetime != null and updatetime != ''">updatetime = #{updatetime},</if>
			<if test="updateUser != null and updateUser != ''">updateUser = #{updateUser},</if>
		</trim>
		<where>id = #{id}</where>
	</update>
	
	<select id="findById" resultMap="teacherResultMap" parameterType="String" >
		select <include refid="table_columns" />
		from base_teacher
		where id = #{id}
	</select>
	
	<select id="queryAll" resultMap="teacherResultMap">
		select <include refid="table_columns" /> 
		from base_teacher
	</select>
	
	<!-- 使用like用法：columnName like concat('%',#columnName#,'%') -->
	<sql id="page_where">
		<trim prefix="where" prefixOverrides="and | or ">
			<if test="id != null and id != ''">and id = #{id}</if>
			<if test="schoolId != null and schoolId != ''">and school_id = #{schoolId}</if>
			<if test="name != null and name != ''">and name = #{name}</if>
			<if test="telphone != null and telphone != ''">and telphone = #{telphone}</if>
			<if test="address != null and address != ''">and address = #{address}</if>
			<if test="remark != null and remark != ''">and remark = #{remark}</if>
			<if test="level != null and level != ''">and level = #{level}</if>
			<if test="technicalTitle != null and technicalTitle != ''">and technical_title = #{technicalTitle}</if>
			<if test="headImg != null and headImg != ''">and head_img = #{headImg}</if>
			<if test="deleted != null and deleted != ''">and deleted = #{deleted}</if>
			<if test="createdtime != null and createdtime != ''">and createdtime = #{createdtime}</if>
			<if test="createdUser != null and createdUser != ''">and createdUser = #{createdUser}</if>
			<if test="updatetime != null and updatetime != ''">and updatetime = #{updatetime}</if>
			<if test="updateUser != null and updateUser != ''">and updateUser = #{updateUser}</if>
		</trim>
	</sql>
	
	<select id="page" resultMap="teacherResultMap" parameterType="TeacherSearch">
		select <include refid="table_columns" />
		from base_teacher
		<include refid="page_where" />
		limit #{firstIndex},#{pageSize}
	</select>
	
	<select id="pageCount" resultType="int" parameterType="TeacherSearch">
		select count(id) from base_teacher
		<include refid="page_where" />
	</select>
	
	<!-- 其他自定义SQL -->
	
</mapper>