<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testpro.base.client.bean.Client">
	<resultMap type="Client" id="clientResultMap">
		<result property="id" column="id" />
		<result property="classroomId" column="classroom_id" />
		<result property="clientVersion" column="client_version" />
		<result property="clientGuid" column="client_guid" />
		<result property="isblock" column="isblock" />
		<result property="status" column="status" />
		<result property="remark" column="remark" />
		<result property="deleted" column="deleted" />
		<result property="createdtime" column="createdtime" />
		<result property="createdUser" column="createdUser" />
		<result property="updatetime" column="updatetime" />
		<result property="updateUser" column="updateUser" />
	</resultMap>
	
	<sql id="table_columns">
		id,
		classroom_id,
		client_version,
		client_guid,
		isblock,
		status,
		remark,
		deleted,
		createdtime,
		createdUser,
		updatetime,
		updateUser
    </sql>
	<sql id="entity_properties">
		#{id},
		#{classroomId},
		#{clientVersion},
		#{clientGuid},
		#{isblock},
		#{status},
		#{remark},
		#{deleted},
		#{createdtime},
		#{createdUser},
		#{updatetime},
		#{updateUser}
	</sql>
	
	<!-- 适用于主键自增类型 -->
	<insert id="save" parameterType="Client" useGeneratedKeys="true" keyProperty="id">
		insert into base_client( <include refid="table_columns" /> ) 
		values ( <include refid="entity_properties" /> )
	</insert>
	
	<delete id="deleteByIds">
		delete from base_client
		where id in
		<foreach item="item" collection="array" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
	
	<update id="update" parameterType="Client">
		update base_client 
		<trim prefix="set" suffixOverrides=",">
			<if test="classroomId != null and classroomId != ''">classroom_id = #{classroomId},</if>
			<if test="clientVersion != null and clientVersion != ''">client_version = #{clientVersion},</if>
			<if test="clientGuid != null and clientGuid != ''">client_guid = #{clientGuid},</if>
			<if test="isblock != null and isblock != ''">isblock = #{isblock},</if>
			<if test="status != null and status != ''">status = #{status},</if>
			<if test="remark != null and remark != ''">remark = #{remark},</if>
			<if test="deleted != null and deleted != ''">deleted = #{deleted},</if>
			<if test="createdtime != null and createdtime != ''">createdtime = #{createdtime},</if>
			<if test="createdUser != null and createdUser != ''">createdUser = #{createdUser},</if>
			<if test="updatetime != null and updatetime != ''">updatetime = #{updatetime},</if>
			<if test="updateUser != null and updateUser != ''">updateUser = #{updateUser},</if>
		</trim>
		<where>id = #{id}</where>
	</update>
	
	<select id="findById" resultMap="clientResultMap" parameterType="String" >
		select <include refid="table_columns" />
		from base_client
		where id = #{id}
	</select>
	
	<select id="queryAll" resultMap="clientResultMap">
		select <include refid="table_columns" /> 
		from base_client
	</select>
	
	<!-- 使用like用法：columnName like concat('%',#columnName#,'%') -->
	<sql id="page_where">
		<trim prefix="where" prefixOverrides="and | or ">
			<if test="classroomId != null and classroomId != ''">and classroom_id = #{classroomId}</if>
			<if test="clientVersion != null and clientVersion != ''">and client_version = #{clientVersion}</if>
			<if test="clientGuid != null and clientGuid != ''">and client_guid = #{clientGuid}</if>
			<if test="isblock != null and isblock != ''">and isblock = #{isblock}</if>
			<if test="status != null and status != ''">and status = #{status}</if>
			<if test="remark != null and remark != ''">and remark = #{remark}</if>
			<if test="deleted != null and deleted != ''">and deleted = #{deleted}</if>
			<if test="createdtime != null and createdtime != ''">and createdtime = #{createdtime}</if>
			<if test="createdUser != null and createdUser != ''">and createdUser = #{createdUser}</if>
			<if test="updatetime != null and updatetime != ''">and updatetime = #{updatetime}</if>
			<if test="updateUser != null and updateUser != ''">and updateUser = #{updateUser}</if>
		</trim>
	</sql>
	
	<select id="page" resultMap="clientResultMap" parameterType="ClientSearch">
		select <include refid="table_columns" />
		from base_client
		<include refid="page_where" />
		limit #{firstIndex},#{pageSize}
	</select>
	
	<select id="pageCount" resultType="int" parameterType="ClientSearch">
		select count(id) from base_client
		<include refid="page_where" />
	</select>
	
	<!-- 其他自定义SQL -->
	
</mapper>