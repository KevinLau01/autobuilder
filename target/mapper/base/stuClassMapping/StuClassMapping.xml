<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testpro.base.stuClassMapping.bean.StuClassMapping">
	<resultMap type="StuClassMapping" id="stuClassMappingResultMap">
		<result property="stuId" column="stu_id" />
		<result property="classId" column="class_id" />
	</resultMap>
	
	<sql id="table_columns">
		stu_id,
		class_id
    </sql>
	<sql id="entity_properties">
		#{stuId},
		#{classId}
	</sql>
	
	<!-- 适用于主键自增类型 -->
	<insert id="save" parameterType="StuClassMapping" useGeneratedKeys="true" keyProperty="id">
		insert into base_stu_class_mapping( <include refid="table_columns" /> ) 
		values ( <include refid="entity_properties" /> )
	</insert>
	
	<delete id="deleteByIds">
		delete from base_stu_class_mapping
		where id in
		<foreach item="item" collection="array" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
	
	<update id="update" parameterType="StuClassMapping">
		update base_stu_class_mapping 
		<trim prefix="set" suffixOverrides=",">
			<if test="classId != null and classId != ''">class_id = #{classId},</if>
		</trim>
		<where>id = #{id}</where>
	</update>
	
	<select id="findById" resultMap="stuClassMappingResultMap" parameterType="String" >
		select <include refid="table_columns" />
		from base_stu_class_mapping
		where id = #{id}
	</select>
	
	<select id="queryAll" resultMap="stuClassMappingResultMap">
		select <include refid="table_columns" /> 
		from base_stu_class_mapping
	</select>
	
	<!-- 使用like用法：columnName like concat('%',#columnName#,'%') -->
	<sql id="page_where">
		<trim prefix="where" prefixOverrides="and | or ">
			<if test="classId != null and classId != ''">and class_id = #{classId}</if>
		</trim>
	</sql>
	
	<select id="page" resultMap="stuClassMappingResultMap" parameterType="StuClassMappingSearch">
		select <include refid="table_columns" />
		from base_stu_class_mapping
		<include refid="page_where" />
		limit #{firstIndex},#{pageSize}
	</select>
	
	<select id="pageCount" resultType="int" parameterType="StuClassMappingSearch">
		select count(id) from base_stu_class_mapping
		<include refid="page_where" />
	</select>
	
	<!-- 其他自定义SQL -->
	
</mapper>