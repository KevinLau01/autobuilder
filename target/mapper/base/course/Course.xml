<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testpro.base.course.bean.Course">
	<resultMap type="Course" id="courseResultMap">
		<result property="id" column="id" />
		<result property="courseName" column="course_name" />
		<result property="classId" column="class_id" />
		<result property="className" column="class_name" />
		<result property="classroomId" column="classroom_id" />
		<result property="classroomName" column="classroom_name" />
		<result property="courseDate" column="course_date" />
		<result property="week" column="week" />
		<result property="startTime" column="start_time" />
		<result property="endTime" column="end_time" />
		<result property="teacherId" column="teacher_id" />
		<result property="teacherName" column="teacher_name" />
		<result property="remark" column="remark" />
		<result property="skuId" column="sku_id" />
		<result property="skuName" column="sku_name" />
		<result property="assistantId" column="assistant_id" />
		<result property="assistantName" column="assistant_name" />
		<result property="deleted" column="deleted" />
		<result property="createdtime" column="createdtime" />
		<result property="createdUser" column="createdUser" />
		<result property="updatetime" column="updatetime" />
		<result property="updateUser" column="updateUser" />
	</resultMap>
	
	<sql id="table_columns">
		id,
		course_name,
		class_id,
		class_name,
		classroom_id,
		classroom_name,
		course_date,
		week,
		start_time,
		end_time,
		teacher_id,
		teacher_name,
		remark,
		sku_id,
		sku_name,
		assistant_id,
		assistant_name,
		deleted,
		createdtime,
		createdUser,
		updatetime,
		updateUser
    </sql>
	<sql id="entity_properties">
		#{id},
		#{courseName},
		#{classId},
		#{className},
		#{classroomId},
		#{classroomName},
		#{courseDate},
		#{week},
		#{startTime},
		#{endTime},
		#{teacherId},
		#{teacherName},
		#{remark},
		#{skuId},
		#{skuName},
		#{assistantId},
		#{assistantName},
		#{deleted},
		#{createdtime},
		#{createdUser},
		#{updatetime},
		#{updateUser}
	</sql>
	
	<!-- 适用于主键自增类型 -->
	<insert id="save" parameterType="Course" useGeneratedKeys="true" keyProperty="id">
		insert into base_course( <include refid="table_columns" /> ) 
		values ( <include refid="entity_properties" /> )
	</insert>
	
	<delete id="deleteByIds">
		delete from base_course
		where id in
		<foreach item="item" collection="array" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
	
	<update id="update" parameterType="Course">
		update base_course 
		<trim prefix="set" suffixOverrides=",">
			<if test="courseName != null and courseName != ''">course_name = #{courseName},</if>
			<if test="classId != null and classId != ''">class_id = #{classId},</if>
			<if test="className != null and className != ''">class_name = #{className},</if>
			<if test="classroomId != null and classroomId != ''">classroom_id = #{classroomId},</if>
			<if test="classroomName != null and classroomName != ''">classroom_name = #{classroomName},</if>
			<if test="courseDate != null and courseDate != ''">course_date = #{courseDate},</if>
			<if test="week != null and week != ''">week = #{week},</if>
			<if test="startTime != null and startTime != ''">start_time = #{startTime},</if>
			<if test="endTime != null and endTime != ''">end_time = #{endTime},</if>
			<if test="teacherId != null and teacherId != ''">teacher_id = #{teacherId},</if>
			<if test="teacherName != null and teacherName != ''">teacher_name = #{teacherName},</if>
			<if test="remark != null and remark != ''">remark = #{remark},</if>
			<if test="skuId != null and skuId != ''">sku_id = #{skuId},</if>
			<if test="skuName != null and skuName != ''">sku_name = #{skuName},</if>
			<if test="assistantId != null and assistantId != ''">assistant_id = #{assistantId},</if>
			<if test="assistantName != null and assistantName != ''">assistant_name = #{assistantName},</if>
			<if test="deleted != null and deleted != ''">deleted = #{deleted},</if>
			<if test="createdtime != null and createdtime != ''">createdtime = #{createdtime},</if>
			<if test="createdUser != null and createdUser != ''">createdUser = #{createdUser},</if>
			<if test="updatetime != null and updatetime != ''">updatetime = #{updatetime},</if>
			<if test="updateUser != null and updateUser != ''">updateUser = #{updateUser},</if>
		</trim>
		<where>id = #{id}</where>
	</update>
	
	<select id="findById" resultMap="courseResultMap" parameterType="String" >
		select <include refid="table_columns" />
		from base_course
		where id = #{id}
	</select>
	
	<select id="queryAll" resultMap="courseResultMap">
		select <include refid="table_columns" /> 
		from base_course
	</select>
	
	<!-- 使用like用法：columnName like concat('%',#columnName#,'%') -->
	<sql id="page_where">
		<trim prefix="where" prefixOverrides="and | or ">
			<if test="courseName != null and courseName != ''">and course_name = #{courseName}</if>
			<if test="classId != null and classId != ''">and class_id = #{classId}</if>
			<if test="className != null and className != ''">and class_name = #{className}</if>
			<if test="classroomId != null and classroomId != ''">and classroom_id = #{classroomId}</if>
			<if test="classroomName != null and classroomName != ''">and classroom_name = #{classroomName}</if>
			<if test="courseDate != null and courseDate != ''">and course_date = #{courseDate}</if>
			<if test="week != null and week != ''">and week = #{week}</if>
			<if test="startTime != null and startTime != ''">and start_time = #{startTime}</if>
			<if test="endTime != null and endTime != ''">and end_time = #{endTime}</if>
			<if test="teacherId != null and teacherId != ''">and teacher_id = #{teacherId}</if>
			<if test="teacherName != null and teacherName != ''">and teacher_name = #{teacherName}</if>
			<if test="remark != null and remark != ''">and remark = #{remark}</if>
			<if test="skuId != null and skuId != ''">and sku_id = #{skuId}</if>
			<if test="skuName != null and skuName != ''">and sku_name = #{skuName}</if>
			<if test="assistantId != null and assistantId != ''">and assistant_id = #{assistantId}</if>
			<if test="assistantName != null and assistantName != ''">and assistant_name = #{assistantName}</if>
			<if test="deleted != null and deleted != ''">and deleted = #{deleted}</if>
			<if test="createdtime != null and createdtime != ''">and createdtime = #{createdtime}</if>
			<if test="createdUser != null and createdUser != ''">and createdUser = #{createdUser}</if>
			<if test="updatetime != null and updatetime != ''">and updatetime = #{updatetime}</if>
			<if test="updateUser != null and updateUser != ''">and updateUser = #{updateUser}</if>
		</trim>
	</sql>
	
	<select id="page" resultMap="courseResultMap" parameterType="CourseSearch">
		select <include refid="table_columns" />
		from base_course
		<include refid="page_where" />
		limit #{firstIndex},#{pageSize}
	</select>
	
	<select id="pageCount" resultType="int" parameterType="CourseSearch">
		select count(id) from base_course
		<include refid="page_where" />
	</select>
	
	<!-- 其他自定义SQL -->
	
</mapper>