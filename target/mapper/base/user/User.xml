<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testpro.base.user.bean.User">
	<resultMap type="User" id="userResultMap">
		<result property="id" column="id" />
		<result property="loginId" column="loginId" />
		<result property="password" column="password" />
		<result property="status" column="status" />
		<result property="organizationId" column="organization_id" />
		<result property="email" column="email" />
		<result property="name" column="name" />
		<result property="deleted" column="deleted" />
		<result property="createdtime" column="createdtime" />
		<result property="createdUser" column="createdUser" />
		<result property="updatetime" column="updatetime" />
		<result property="updateUser" column="updateUser" />
	</resultMap>
	
	<sql id="table_columns">
		id,
		loginId,
		password,
		status,
		organization_id,
		email,
		name,
		deleted,
		createdtime,
		createdUser,
		updatetime,
		updateUser
    </sql>
	<sql id="entity_properties">
		#{id},
		#{loginId},
		#{password},
		#{status},
		#{organizationId},
		#{email},
		#{name},
		#{deleted},
		#{createdtime},
		#{createdUser},
		#{updatetime},
		#{updateUser}
	</sql>
	
	<!-- 适用于主键自增类型 -->
	<insert id="save" parameterType="User" useGeneratedKeys="true" keyProperty="id">
		insert into base_user( <include refid="table_columns" /> ) 
		values ( <include refid="entity_properties" /> )
	</insert>
	
	<delete id="deleteByIds">
		delete from base_user
		where id in
		<foreach item="item" collection="array" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
	
	<update id="update" parameterType="User">
		update base_user 
		<trim prefix="set" suffixOverrides=",">
			<if test="loginId != null and loginId != ''">loginId = #{loginId},</if>
			<if test="password != null and password != ''">password = #{password},</if>
			<if test="status != null and status != ''">status = #{status},</if>
			<if test="organizationId != null and organizationId != ''">organization_id = #{organizationId},</if>
			<if test="email != null and email != ''">email = #{email},</if>
			<if test="name != null and name != ''">name = #{name},</if>
			<if test="deleted != null and deleted != ''">deleted = #{deleted},</if>
			<if test="createdtime != null and createdtime != ''">createdtime = #{createdtime},</if>
			<if test="createdUser != null and createdUser != ''">createdUser = #{createdUser},</if>
			<if test="updatetime != null and updatetime != ''">updatetime = #{updatetime},</if>
			<if test="updateUser != null and updateUser != ''">updateUser = #{updateUser},</if>
		</trim>
		<where>id = #{id}</where>
	</update>
	
	<select id="findById" resultMap="userResultMap" parameterType="String" >
		select <include refid="table_columns" />
		from base_user
		where id = #{id}
	</select>
	
	<select id="queryAll" resultMap="userResultMap">
		select <include refid="table_columns" /> 
		from base_user
	</select>
	
	<!-- 使用like用法：columnName like concat('%',#columnName#,'%') -->
	<sql id="page_where">
		<trim prefix="where" prefixOverrides="and | or ">
			<if test="loginId != null and loginId != ''">and loginId = #{loginId}</if>
			<if test="password != null and password != ''">and password = #{password}</if>
			<if test="status != null and status != ''">and status = #{status}</if>
			<if test="organizationId != null and organizationId != ''">and organization_id = #{organizationId}</if>
			<if test="email != null and email != ''">and email = #{email}</if>
			<if test="name != null and name != ''">and name = #{name}</if>
			<if test="deleted != null and deleted != ''">and deleted = #{deleted}</if>
			<if test="createdtime != null and createdtime != ''">and createdtime = #{createdtime}</if>
			<if test="createdUser != null and createdUser != ''">and createdUser = #{createdUser}</if>
			<if test="updatetime != null and updatetime != ''">and updatetime = #{updatetime}</if>
			<if test="updateUser != null and updateUser != ''">and updateUser = #{updateUser}</if>
		</trim>
	</sql>
	
	<select id="page" resultMap="userResultMap" parameterType="UserSearch">
		select <include refid="table_columns" />
		from base_user
		<include refid="page_where" />
		limit #{firstIndex},#{pageSize}
	</select>
	
	<select id="pageCount" resultType="int" parameterType="UserSearch">
		select count(id) from base_user
		<include refid="page_where" />
	</select>
	
	<!-- 其他自定义SQL -->
	
</mapper>