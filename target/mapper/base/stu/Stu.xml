<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testpro.base.stu.bean.Stu">
	<resultMap type="Stu" id="stuResultMap">
		<result property="id" column="id" />
		<result property="name" column="name" />
		<result property="number" column="number" />
		<result property="headImg" column="head_img" />
		<result property="parentsName" column="parents_name" />
		<result property="parentsPhone" column="parents_phone" />
		<result property="loginId" column="login_id" />
		<result property="password" column="password" />
		<result property="headCircularImg" column="head_circular_img" />
		<result property="headImgStatus" column="head_img_status" />
		<result property="deleted" column="deleted" />
		<result property="createdtime" column="createdtime" />
		<result property="createdUser" column="createdUser" />
		<result property="updatetime" column="updatetime" />
		<result property="updateUser" column="updateUser" />
		<result property="activated" column="activated" />
		<result property="orgId" column="orgId" />
	</resultMap>
	
	<sql id="table_columns">
		id,
		name,
		number,
		head_img,
		parents_name,
		parents_phone,
		login_id,
		password,
		head_circular_img,
		head_img_status,
		deleted,
		createdtime,
		createdUser,
		updatetime,
		updateUser,
		activated,
		orgId
    </sql>
	<sql id="entity_properties">
		#{id},
		#{name},
		#{number},
		#{headImg},
		#{parentsName},
		#{parentsPhone},
		#{loginId},
		#{password},
		#{headCircularImg},
		#{headImgStatus},
		#{deleted},
		#{createdtime},
		#{createdUser},
		#{updatetime},
		#{updateUser},
		#{activated},
		#{orgId}
	</sql>
	
	<!-- 适用于主键自增类型 -->
	<insert id="save" parameterType="Stu" useGeneratedKeys="true" keyProperty="id">
		insert into base_stu( <include refid="table_columns" /> ) 
		values ( <include refid="entity_properties" /> )
	</insert>
	
	<delete id="deleteByIds">
		delete from base_stu
		where id in
		<foreach item="item" collection="array" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
	
	<update id="update" parameterType="Stu">
		update base_stu 
		<trim prefix="set" suffixOverrides=",">
			<if test="name != null and name != ''">name = #{name},</if>
			<if test="number != null and number != ''">number = #{number},</if>
			<if test="headImg != null and headImg != ''">head_img = #{headImg},</if>
			<if test="parentsName != null and parentsName != ''">parents_name = #{parentsName},</if>
			<if test="parentsPhone != null and parentsPhone != ''">parents_phone = #{parentsPhone},</if>
			<if test="loginId != null and loginId != ''">login_id = #{loginId},</if>
			<if test="password != null and password != ''">password = #{password},</if>
			<if test="headCircularImg != null and headCircularImg != ''">head_circular_img = #{headCircularImg},</if>
			<if test="headImgStatus != null and headImgStatus != ''">head_img_status = #{headImgStatus},</if>
			<if test="deleted != null and deleted != ''">deleted = #{deleted},</if>
			<if test="createdtime != null and createdtime != ''">createdtime = #{createdtime},</if>
			<if test="createdUser != null and createdUser != ''">createdUser = #{createdUser},</if>
			<if test="updatetime != null and updatetime != ''">updatetime = #{updatetime},</if>
			<if test="updateUser != null and updateUser != ''">updateUser = #{updateUser},</if>
			<if test="activated != null and activated != ''">activated = #{activated},</if>
			<if test="orgId != null and orgId != ''">orgId = #{orgId},</if>
		</trim>
		<where>id = #{id}</where>
	</update>
	
	<select id="findById" resultMap="stuResultMap" parameterType="String" >
		select <include refid="table_columns" />
		from base_stu
		where id = #{id}
	</select>
	
	<select id="queryAll" resultMap="stuResultMap">
		select <include refid="table_columns" /> 
		from base_stu
	</select>
	
	<!-- 使用like用法：columnName like concat('%',#columnName#,'%') -->
	<sql id="page_where">
		<trim prefix="where" prefixOverrides="and | or ">
			<if test="name != null and name != ''">and name = #{name}</if>
			<if test="number != null and number != ''">and number = #{number}</if>
			<if test="headImg != null and headImg != ''">and head_img = #{headImg}</if>
			<if test="parentsName != null and parentsName != ''">and parents_name = #{parentsName}</if>
			<if test="parentsPhone != null and parentsPhone != ''">and parents_phone = #{parentsPhone}</if>
			<if test="loginId != null and loginId != ''">and login_id = #{loginId}</if>
			<if test="password != null and password != ''">and password = #{password}</if>
			<if test="headCircularImg != null and headCircularImg != ''">and head_circular_img = #{headCircularImg}</if>
			<if test="headImgStatus != null and headImgStatus != ''">and head_img_status = #{headImgStatus}</if>
			<if test="deleted != null and deleted != ''">and deleted = #{deleted}</if>
			<if test="createdtime != null and createdtime != ''">and createdtime = #{createdtime}</if>
			<if test="createdUser != null and createdUser != ''">and createdUser = #{createdUser}</if>
			<if test="updatetime != null and updatetime != ''">and updatetime = #{updatetime}</if>
			<if test="updateUser != null and updateUser != ''">and updateUser = #{updateUser}</if>
			<if test="activated != null and activated != ''">and activated = #{activated}</if>
			<if test="orgId != null and orgId != ''">and orgId = #{orgId}</if>
		</trim>
	</sql>
	
	<select id="page" resultMap="stuResultMap" parameterType="StuSearch">
		select <include refid="table_columns" />
		from base_stu
		<include refid="page_where" />
		limit #{firstIndex},#{pageSize}
	</select>
	
	<select id="pageCount" resultType="int" parameterType="StuSearch">
		select count(id) from base_stu
		<include refid="page_where" />
	</select>
	
	<!-- 其他自定义SQL -->
	
</mapper>