<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testpro.bannerNotice.bean.BannerNotice">
	<resultMap type="BannerNotice" id="bannerNoticeResultMap">
		<result property="id" column="id" />
		<result property="courseId" column="course_id" />
		<result property="noticeWord" column="notice_word" />
		<result property="startTime" column="start_time" />
		<result property="endTime" column="end_time" />
		<result property="status" column="status" />
		<result property="note" column="note" />
		<result property="createdAt" column="created_at" />
		<result property="updatedAt" column="updated_at" />
		<result property="deletedAt" column="deleted_at" />
	</resultMap>
	
	<sql id="table_columns">
		id,
		course_id,
		notice_word,
		start_time,
		end_time,
		status,
		note,
		created_at,
		updated_at,
		deleted_at
    </sql>
	<sql id="entity_properties">
		#{id},
		#{courseId},
		#{noticeWord},
		#{startTime},
		#{endTime},
		#{status},
		#{note},
		#{createdAt},
		#{updatedAt},
		#{deletedAt}
	</sql>
	
	<!-- 适用于主键自增类型 -->
	<insert id="save" parameterType="BannerNotice" useGeneratedKeys="true" keyProperty="id">
		insert into banner_notice( <include refid="table_columns" /> ) 
		values ( <include refid="entity_properties" /> )
	</insert>
	
	<delete id="deleteByIds">
		delete from banner_notice
		where id in
		<foreach item="item" collection="array" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
	
	<update id="update" parameterType="BannerNotice">
		update banner_notice 
		<trim prefix="set" suffixOverrides=",">
			<if test="courseId != null and courseId != ''">course_id = #{courseId},</if>
			<if test="noticeWord != null and noticeWord != ''">notice_word = #{noticeWord},</if>
			<if test="startTime != null and startTime != ''">start_time = #{startTime},</if>
			<if test="endTime != null and endTime != ''">end_time = #{endTime},</if>
			<if test="status != null and status != ''">status = #{status},</if>
			<if test="note != null and note != ''">note = #{note},</if>
			<if test="createdAt != null and createdAt != ''">created_at = #{createdAt},</if>
			<if test="updatedAt != null and updatedAt != ''">updated_at = #{updatedAt},</if>
			<if test="deletedAt != null and deletedAt != ''">deleted_at = #{deletedAt},</if>
		</trim>
		<where>id = #{id}</where>
	</update>
	
	<select id="findById" resultMap="bannerNoticeResultMap" parameterType="String" >
		select <include refid="table_columns" />
		from banner_notice
		where id = #{id}
	</select>
	
	<select id="queryAll" resultMap="bannerNoticeResultMap">
		select <include refid="table_columns" /> 
		from banner_notice
	</select>
	
	<!-- 使用like用法：columnName like concat('%',#columnName#,'%') -->
	<sql id="page_where">
		<trim prefix="where" prefixOverrides="and | or ">
			<if test="courseId != null and courseId != ''">and course_id = #{courseId}</if>
			<if test="noticeWord != null and noticeWord != ''">and notice_word = #{noticeWord}</if>
			<if test="startTime != null and startTime != ''">and start_time = #{startTime}</if>
			<if test="endTime != null and endTime != ''">and end_time = #{endTime}</if>
			<if test="status != null and status != ''">and status = #{status}</if>
			<if test="note != null and note != ''">and note = #{note}</if>
			<if test="createdAt != null and createdAt != ''">and created_at = #{createdAt}</if>
			<if test="updatedAt != null and updatedAt != ''">and updated_at = #{updatedAt}</if>
			<if test="deletedAt != null and deletedAt != ''">and deleted_at = #{deletedAt}</if>
		</trim>
	</sql>
	
	<select id="page" resultMap="bannerNoticeResultMap" parameterType="BannerNoticeSearch">
		select <include refid="table_columns" />
		from banner_notice
		<include refid="page_where" />
		limit #{firstIndex},#{pageSize}
	</select>
	
	<select id="pageCount" resultType="int" parameterType="BannerNoticeSearch">
		select count(id) from banner_notice
		<include refid="page_where" />
	</select>
	
	<!-- 其他自定义SQL -->
	
</mapper>