<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testpro.ruleRolePermission.bean.RuleRolePermission">
	<resultMap type="RuleRolePermission" id="ruleRolePermissionResultMap">
		<result property="ruleRoleId" column="rule_role_id" />
		<result property="rulePermissionId" column="rule_permission_id" />
	</resultMap>
	
	<sql id="table_columns">
		rule_role_id,
		rule_permission_id
    </sql>
	<sql id="entity_properties">
		#{ruleRoleId},
		#{rulePermissionId}
	</sql>
	
	<!-- 适用于主键自增类型 -->
	<insert id="save" parameterType="RuleRolePermission" useGeneratedKeys="true" keyProperty="id">
		insert into rule_role_permission( <include refid="table_columns" /> ) 
		values ( <include refid="entity_properties" /> )
	</insert>
	
	<delete id="deleteByIds">
		delete from rule_role_permission
		where id in
		<foreach item="item" collection="array" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
	
	<update id="update" parameterType="RuleRolePermission">
		update rule_role_permission 
		<trim prefix="set" suffixOverrides=",">
			<if test="rulePermissionId != null and rulePermissionId != ''">rule_permission_id = #{rulePermissionId},</if>
		</trim>
		<where>id = #{id}</where>
	</update>
	
	<select id="findById" resultMap="ruleRolePermissionResultMap" parameterType="String" >
		select <include refid="table_columns" />
		from rule_role_permission
		where id = #{id}
	</select>
	
	<select id="queryAll" resultMap="ruleRolePermissionResultMap">
		select <include refid="table_columns" /> 
		from rule_role_permission
	</select>
	
	<!-- 使用like用法：columnName like concat('%',#columnName#,'%') -->
	<sql id="page_where">
		<trim prefix="where" prefixOverrides="and | or ">
			<if test="rulePermissionId != null and rulePermissionId != ''">and rule_permission_id = #{rulePermissionId}</if>
		</trim>
	</sql>
	
	<select id="page" resultMap="ruleRolePermissionResultMap" parameterType="RuleRolePermissionSearch">
		select <include refid="table_columns" />
		from rule_role_permission
		<include refid="page_where" />
		limit #{firstIndex},#{pageSize}
	</select>
	
	<select id="pageCount" resultType="int" parameterType="RuleRolePermissionSearch">
		select count(id) from rule_role_permission
		<include refid="page_where" />
	</select>
	
	<!-- 其他自定义SQL -->
	
</mapper>