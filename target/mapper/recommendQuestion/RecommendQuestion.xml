<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testpro.recommendQuestion.bean.RecommendQuestion">
	<resultMap type="RecommendQuestion" id="recommendQuestionResultMap">
		<result property="id" column="id" />
		<result property="questionTypeId" column="question_type_id" />
		<result property="question" column="question" />
		<result property="answer" column="answer" />
		<result property="level" column="level" />
		<result property="note" column="note" />
		<result property="createdAt" column="created_at" />
		<result property="updatedAt" column="updated_at" />
		<result property="deletedAt" column="deleted_at" />
	</resultMap>
	
	<sql id="table_columns">
		id,
		question_type_id,
		question,
		answer,
		level,
		note,
		created_at,
		updated_at,
		deleted_at
    </sql>
	<sql id="entity_properties">
		#{id},
		#{questionTypeId},
		#{question},
		#{answer},
		#{level},
		#{note},
		#{createdAt},
		#{updatedAt},
		#{deletedAt}
	</sql>
	
	<!-- 适用于主键自增类型 -->
	<insert id="save" parameterType="RecommendQuestion" useGeneratedKeys="true" keyProperty="id">
		insert into recommend_question( <include refid="table_columns" /> ) 
		values ( <include refid="entity_properties" /> )
	</insert>
	
	<delete id="deleteByIds">
		delete from recommend_question
		where id in
		<foreach item="item" collection="array" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
	
	<update id="update" parameterType="RecommendQuestion">
		update recommend_question 
		<trim prefix="set" suffixOverrides=",">
			<if test="questionTypeId != null and questionTypeId != ''">question_type_id = #{questionTypeId},</if>
			<if test="question != null and question != ''">question = #{question},</if>
			<if test="answer != null and answer != ''">answer = #{answer},</if>
			<if test="level != null and level != ''">level = #{level},</if>
			<if test="note != null and note != ''">note = #{note},</if>
			<if test="createdAt != null and createdAt != ''">created_at = #{createdAt},</if>
			<if test="updatedAt != null and updatedAt != ''">updated_at = #{updatedAt},</if>
			<if test="deletedAt != null and deletedAt != ''">deleted_at = #{deletedAt},</if>
		</trim>
		<where>id = #{id}</where>
	</update>
	
	<select id="findById" resultMap="recommendQuestionResultMap" parameterType="String" >
		select <include refid="table_columns" />
		from recommend_question
		where id = #{id}
	</select>
	
	<select id="queryAll" resultMap="recommendQuestionResultMap">
		select <include refid="table_columns" /> 
		from recommend_question
	</select>
	
	<!-- 使用like用法：columnName like concat('%',#columnName#,'%') -->
	<sql id="page_where">
		<trim prefix="where" prefixOverrides="and | or ">
			<if test="questionTypeId != null and questionTypeId != ''">and question_type_id = #{questionTypeId}</if>
			<if test="question != null and question != ''">and question = #{question}</if>
			<if test="answer != null and answer != ''">and answer = #{answer}</if>
			<if test="level != null and level != ''">and level = #{level}</if>
			<if test="note != null and note != ''">and note = #{note}</if>
			<if test="createdAt != null and createdAt != ''">and created_at = #{createdAt}</if>
			<if test="updatedAt != null and updatedAt != ''">and updated_at = #{updatedAt}</if>
			<if test="deletedAt != null and deletedAt != ''">and deleted_at = #{deletedAt}</if>
		</trim>
	</sql>
	
	<select id="page" resultMap="recommendQuestionResultMap" parameterType="RecommendQuestionSearch">
		select <include refid="table_columns" />
		from recommend_question
		<include refid="page_where" />
		limit #{firstIndex},#{pageSize}
	</select>
	
	<select id="pageCount" resultType="int" parameterType="RecommendQuestionSearch">
		select count(id) from recommend_question
		<include refid="page_where" />
	</select>
	
	<!-- 其他自定义SQL -->
	
</mapper>