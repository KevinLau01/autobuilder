<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testpro.websocketClientMap.bean.WebsocketClientMap">
	<resultMap type="WebsocketClientMap" id="websocketClientMapResultMap">
		<result property="id" column="id" />
		<result property="orgId" column="org_id" />
		<result property="courseId" column="course_id" />
		<result property="clientId" column="client_id" />
		<result property="socketId" column="socket_id" />
		<result property="attribute" column="attribute" />
		<result property="session" column="session" />
		<result property="createdAt" column="created_at" />
		<result property="updatedAt" column="updated_at" />
		<result property="deletedAt" column="deleted_at" />
	</resultMap>
	
	<sql id="table_columns">
		id,
		org_id,
		course_id,
		client_id,
		socket_id,
		attribute,
		session,
		created_at,
		updated_at,
		deleted_at
    </sql>
	<sql id="entity_properties">
		#{id},
		#{orgId},
		#{courseId},
		#{clientId},
		#{socketId},
		#{attribute},
		#{session},
		#{createdAt},
		#{updatedAt},
		#{deletedAt}
	</sql>
	
	<!-- 适用于主键自增类型 -->
	<insert id="save" parameterType="WebsocketClientMap" useGeneratedKeys="true" keyProperty="id">
		insert into websocket_client_map( <include refid="table_columns" /> ) 
		values ( <include refid="entity_properties" /> )
	</insert>
	
	<delete id="deleteByIds">
		delete from websocket_client_map
		where id in
		<foreach item="item" collection="array" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
	
	<update id="update" parameterType="WebsocketClientMap">
		update websocket_client_map 
		<trim prefix="set" suffixOverrides=",">
			<if test="orgId != null and orgId != ''">org_id = #{orgId},</if>
			<if test="courseId != null and courseId != ''">course_id = #{courseId},</if>
			<if test="clientId != null and clientId != ''">client_id = #{clientId},</if>
			<if test="socketId != null and socketId != ''">socket_id = #{socketId},</if>
			<if test="attribute != null and attribute != ''">attribute = #{attribute},</if>
			<if test="session != null and session != ''">session = #{session},</if>
			<if test="createdAt != null and createdAt != ''">created_at = #{createdAt},</if>
			<if test="updatedAt != null and updatedAt != ''">updated_at = #{updatedAt},</if>
			<if test="deletedAt != null and deletedAt != ''">deleted_at = #{deletedAt},</if>
		</trim>
		<where>id = #{id}</where>
	</update>
	
	<select id="findById" resultMap="websocketClientMapResultMap" parameterType="String" >
		select <include refid="table_columns" />
		from websocket_client_map
		where id = #{id}
	</select>
	
	<select id="queryAll" resultMap="websocketClientMapResultMap">
		select <include refid="table_columns" /> 
		from websocket_client_map
	</select>
	
	<!-- 使用like用法：columnName like concat('%',#columnName#,'%') -->
	<sql id="page_where">
		<trim prefix="where" prefixOverrides="and | or ">
			<if test="orgId != null and orgId != ''">and org_id = #{orgId}</if>
			<if test="courseId != null and courseId != ''">and course_id = #{courseId}</if>
			<if test="clientId != null and clientId != ''">and client_id = #{clientId}</if>
			<if test="socketId != null and socketId != ''">and socket_id = #{socketId}</if>
			<if test="attribute != null and attribute != ''">and attribute = #{attribute}</if>
			<if test="session != null and session != ''">and session = #{session}</if>
			<if test="createdAt != null and createdAt != ''">and created_at = #{createdAt}</if>
			<if test="updatedAt != null and updatedAt != ''">and updated_at = #{updatedAt}</if>
			<if test="deletedAt != null and deletedAt != ''">and deleted_at = #{deletedAt}</if>
		</trim>
	</sql>
	
	<select id="page" resultMap="websocketClientMapResultMap" parameterType="WebsocketClientMapSearch">
		select <include refid="table_columns" />
		from websocket_client_map
		<include refid="page_where" />
		limit #{firstIndex},#{pageSize}
	</select>
	
	<select id="pageCount" resultType="int" parameterType="WebsocketClientMapSearch">
		select count(id) from websocket_client_map
		<include refid="page_where" />
	</select>
	
	<!-- 其他自定义SQL -->
	
</mapper>