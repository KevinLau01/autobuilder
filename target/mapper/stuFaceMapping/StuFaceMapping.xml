<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testpro.stuFaceMapping.bean.StuFaceMapping">
	<resultMap type="StuFaceMapping" id="stuFaceMappingResultMap">
		<result property="id" column="id" />
		<result property="stuId" column="stu_id" />
		<result property="stuName" column="stu_name" />
		<result property="classId" column="class_id" />
		<result property="courseId" column="course_id" />
		<result property="faceId" column="face_id" />
		<result property="faceImage" column="face_image" />
	</resultMap>
	
	<sql id="table_columns">
		id,
		stu_id,
		stu_name,
		class_id,
		course_id,
		face_id,
		face_image
    </sql>
	<sql id="entity_properties">
		#{id},
		#{stuId},
		#{stuName},
		#{classId},
		#{courseId},
		#{faceId},
		#{faceImage}
	</sql>
	
	<!-- 适用于主键自增类型 -->
	<insert id="save" parameterType="StuFaceMapping" useGeneratedKeys="true" keyProperty="id">
		insert into stu_face_mapping( <include refid="table_columns" /> ) 
		values ( <include refid="entity_properties" /> )
	</insert>
	
	<delete id="deleteByIds">
		delete from stu_face_mapping
		where id in
		<foreach item="item" collection="array" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
	
	<update id="update" parameterType="StuFaceMapping">
		update stu_face_mapping 
		<trim prefix="set" suffixOverrides=",">
			<if test="stuId != null and stuId != ''">stu_id = #{stuId},</if>
			<if test="stuName != null and stuName != ''">stu_name = #{stuName},</if>
			<if test="classId != null and classId != ''">class_id = #{classId},</if>
			<if test="courseId != null and courseId != ''">course_id = #{courseId},</if>
			<if test="faceId != null and faceId != ''">face_id = #{faceId},</if>
			<if test="faceImage != null and faceImage != ''">face_image = #{faceImage},</if>
		</trim>
		<where>id = #{id}</where>
	</update>
	
	<select id="findById" resultMap="stuFaceMappingResultMap" parameterType="String" >
		select <include refid="table_columns" />
		from stu_face_mapping
		where id = #{id}
	</select>
	
	<select id="queryAll" resultMap="stuFaceMappingResultMap">
		select <include refid="table_columns" /> 
		from stu_face_mapping
	</select>
	
	<!-- 使用like用法：columnName like concat('%',#columnName#,'%') -->
	<sql id="page_where">
		<trim prefix="where" prefixOverrides="and | or ">
			<if test="stuId != null and stuId != ''">and stu_id = #{stuId}</if>
			<if test="stuName != null and stuName != ''">and stu_name = #{stuName}</if>
			<if test="classId != null and classId != ''">and class_id = #{classId}</if>
			<if test="courseId != null and courseId != ''">and course_id = #{courseId}</if>
			<if test="faceId != null and faceId != ''">and face_id = #{faceId}</if>
			<if test="faceImage != null and faceImage != ''">and face_image = #{faceImage}</if>
		</trim>
	</sql>
	
	<select id="page" resultMap="stuFaceMappingResultMap" parameterType="StuFaceMappingSearch">
		select <include refid="table_columns" />
		from stu_face_mapping
		<include refid="page_where" />
		limit #{firstIndex},#{pageSize}
	</select>
	
	<select id="pageCount" resultType="int" parameterType="StuFaceMappingSearch">
		select count(id) from stu_face_mapping
		<include refid="page_where" />
	</select>
	
	<!-- 其他自定义SQL -->
	
</mapper>