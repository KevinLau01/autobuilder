<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testpro.remarkChange.bean.RemarkChange">
	<resultMap type="RemarkChange" id="remarkChangeResultMap">
		<result property="id" column="id" />
		<result property="wordType" column="word_type" />
		<result property="changeType" column="change_type" />
		<result property="remarkWord" column="remark_word" />
	</resultMap>
	
	<sql id="table_columns">
		id,
		word_type,
		change_type,
		remark_word
    </sql>
	<sql id="entity_properties">
		#{id},
		#{wordType},
		#{changeType},
		#{remarkWord}
	</sql>
	
	<!-- 适用于主键自增类型 -->
	<insert id="save" parameterType="RemarkChange" useGeneratedKeys="true" keyProperty="id">
		insert into remark_change( <include refid="table_columns" /> ) 
		values ( <include refid="entity_properties" /> )
	</insert>
	
	<delete id="deleteByIds">
		delete from remark_change
		where id in
		<foreach item="item" collection="array" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
	
	<update id="update" parameterType="RemarkChange">
		update remark_change 
		<trim prefix="set" suffixOverrides=",">
			<if test="wordType != null and wordType != ''">word_type = #{wordType},</if>
			<if test="changeType != null and changeType != ''">change_type = #{changeType},</if>
			<if test="remarkWord != null and remarkWord != ''">remark_word = #{remarkWord},</if>
		</trim>
		<where>id = #{id}</where>
	</update>
	
	<select id="findById" resultMap="remarkChangeResultMap" parameterType="String" >
		select <include refid="table_columns" />
		from remark_change
		where id = #{id}
	</select>
	
	<select id="queryAll" resultMap="remarkChangeResultMap">
		select <include refid="table_columns" /> 
		from remark_change
	</select>
	
	<!-- 使用like用法：columnName like concat('%',#columnName#,'%') -->
	<sql id="page_where">
		<trim prefix="where" prefixOverrides="and | or ">
			<if test="wordType != null and wordType != ''">and word_type = #{wordType}</if>
			<if test="changeType != null and changeType != ''">and change_type = #{changeType}</if>
			<if test="remarkWord != null and remarkWord != ''">and remark_word = #{remarkWord}</if>
		</trim>
	</sql>
	
	<select id="page" resultMap="remarkChangeResultMap" parameterType="RemarkChangeSearch">
		select <include refid="table_columns" />
		from remark_change
		<include refid="page_where" />
		limit #{firstIndex},#{pageSize}
	</select>
	
	<select id="pageCount" resultType="int" parameterType="RemarkChangeSearch">
		select count(id) from remark_change
		<include refid="page_where" />
	</select>
	
	<!-- 其他自定义SQL -->
	
</mapper>