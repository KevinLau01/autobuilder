<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testpro.logOperation.bean.LogOperation">
	<resultMap type="LogOperation" id="logOperationResultMap">
		<result property="id" column="id" />
		<result property="orgName" column="orgName" />
		<result property="schoolName" column="schoolName" />
		<result property="userName" column="userName" />
		<result property="email" column="email" />
		<result property="roleName" column="roleName" />
		<result property="model" column="model" />
		<result property="operation" column="operation" />
		<result property="createdtime" column="createdtime" />
		<result property="description" column="description" />
	</resultMap>
	
	<sql id="table_columns">
		id,
		orgName,
		schoolName,
		userName,
		email,
		roleName,
		model,
		operation,
		createdtime,
		description
    </sql>
	<sql id="entity_properties">
		#{id},
		#{orgName},
		#{schoolName},
		#{userName},
		#{email},
		#{roleName},
		#{model},
		#{operation},
		#{createdtime},
		#{description}
	</sql>
	
	<!-- 适用于主键自增类型 -->
	<insert id="save" parameterType="LogOperation" useGeneratedKeys="true" keyProperty="id">
		insert into log_operation( <include refid="table_columns" /> ) 
		values ( <include refid="entity_properties" /> )
	</insert>
	
	<delete id="deleteByIds">
		delete from log_operation
		where id in
		<foreach item="item" collection="array" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
	
	<update id="update" parameterType="LogOperation">
		update log_operation 
		<trim prefix="set" suffixOverrides=",">
			<if test="orgName != null and orgName != ''">orgName = #{orgName},</if>
			<if test="schoolName != null and schoolName != ''">schoolName = #{schoolName},</if>
			<if test="userName != null and userName != ''">userName = #{userName},</if>
			<if test="email != null and email != ''">email = #{email},</if>
			<if test="roleName != null and roleName != ''">roleName = #{roleName},</if>
			<if test="model != null and model != ''">model = #{model},</if>
			<if test="operation != null and operation != ''">operation = #{operation},</if>
			<if test="createdtime != null and createdtime != ''">createdtime = #{createdtime},</if>
			<if test="description != null and description != ''">description = #{description},</if>
		</trim>
		<where>id = #{id}</where>
	</update>
	
	<select id="findById" resultMap="logOperationResultMap" parameterType="String" >
		select <include refid="table_columns" />
		from log_operation
		where id = #{id}
	</select>
	
	<select id="queryAll" resultMap="logOperationResultMap">
		select <include refid="table_columns" /> 
		from log_operation
	</select>
	
	<!-- 使用like用法：columnName like concat('%',#columnName#,'%') -->
	<sql id="page_where">
		<trim prefix="where" prefixOverrides="and | or ">
			<if test="orgName != null and orgName != ''">and orgName = #{orgName}</if>
			<if test="schoolName != null and schoolName != ''">and schoolName = #{schoolName}</if>
			<if test="userName != null and userName != ''">and userName = #{userName}</if>
			<if test="email != null and email != ''">and email = #{email}</if>
			<if test="roleName != null and roleName != ''">and roleName = #{roleName}</if>
			<if test="model != null and model != ''">and model = #{model}</if>
			<if test="operation != null and operation != ''">and operation = #{operation}</if>
			<if test="createdtime != null and createdtime != ''">and createdtime = #{createdtime}</if>
			<if test="description != null and description != ''">and description = #{description}</if>
		</trim>
	</sql>
	
	<select id="page" resultMap="logOperationResultMap" parameterType="LogOperationSearch">
		select <include refid="table_columns" />
		from log_operation
		<include refid="page_where" />
		limit #{firstIndex},#{pageSize}
	</select>
	
	<select id="pageCount" resultType="int" parameterType="LogOperationSearch">
		select count(id) from log_operation
		<include refid="page_where" />
	</select>
	
	<!-- 其他自定义SQL -->
	
</mapper>