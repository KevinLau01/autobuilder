<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testpro.ruleUserRole.bean.RuleUserRole">
	<resultMap type="RuleUserRole" id="ruleUserRoleResultMap">
		<result property="ruleRoleId" column="rule_role_id" />
		<result property="baseUserId" column="base_user_id" />
	</resultMap>
	
	<sql id="table_columns">
		rule_role_id,
		base_user_id
    </sql>
	<sql id="entity_properties">
		#{ruleRoleId},
		#{baseUserId}
	</sql>
	
	<!-- 适用于主键自增类型 -->
	<insert id="save" parameterType="RuleUserRole" useGeneratedKeys="true" keyProperty="id">
		insert into rule_user_role( <include refid="table_columns" /> ) 
		values ( <include refid="entity_properties" /> )
	</insert>
	
	<delete id="deleteByIds">
		delete from rule_user_role
		where id in
		<foreach item="item" collection="array" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
	
	<update id="update" parameterType="RuleUserRole">
		update rule_user_role 
		<trim prefix="set" suffixOverrides=",">
			<if test="baseUserId != null and baseUserId != ''">base_user_id = #{baseUserId},</if>
		</trim>
		<where>id = #{id}</where>
	</update>
	
	<select id="findById" resultMap="ruleUserRoleResultMap" parameterType="String" >
		select <include refid="table_columns" />
		from rule_user_role
		where id = #{id}
	</select>
	
	<select id="queryAll" resultMap="ruleUserRoleResultMap">
		select <include refid="table_columns" /> 
		from rule_user_role
	</select>
	
	<!-- 使用like用法：columnName like concat('%',#columnName#,'%') -->
	<sql id="page_where">
		<trim prefix="where" prefixOverrides="and | or ">
			<if test="baseUserId != null and baseUserId != ''">and base_user_id = #{baseUserId}</if>
		</trim>
	</sql>
	
	<select id="page" resultMap="ruleUserRoleResultMap" parameterType="RuleUserRoleSearch">
		select <include refid="table_columns" />
		from rule_user_role
		<include refid="page_where" />
		limit #{firstIndex},#{pageSize}
	</select>
	
	<select id="pageCount" resultType="int" parameterType="RuleUserRoleSearch">
		select count(id) from rule_user_role
		<include refid="page_where" />
	</select>
	
	<!-- 其他自定义SQL -->
	
</mapper>