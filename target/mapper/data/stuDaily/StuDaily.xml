<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testpro.data.stuDaily.bean.StuDaily">
	<resultMap type="StuDaily" id="stuDailyResultMap">
		<result property="id" column="id" />
		<result property="classId" column="class_id" />
		<result property="className" column="class_name" />
		<result property="courseTime" column="course_time" />
		<result property="status" column="status" />
		<result property="courseId" column="course_id" />
		<result property="courseName" column="course_name" />
		<result property="pushLanguage" column="push_language" />
		<result property="pushAnswer" column="push_answer" />
		<result property="pushTitle" column="push_title" />
		<result property="pushType" column="push_type" />
		<result property="createdtime" column="createdtime" />
		<result property="updatetime" column="updatetime" />
		<result property="createUser" column="createUser" />
		<result property="updateUser" column="updateUser" />
		<result property="deleted" column="deleted" />
		<result property="teacherId" column="teacher_id" />
		<result property="teacherName" column="teacher_name" />
		<result property="assistantName" column="assistant_name" />
		<result property="assistantId" column="assistant_id" />
