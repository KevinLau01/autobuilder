	<sql id="table_columns">
		id,
		class_id,
		class_name,
		course_time,
		status,
		course_id,
		course_name,
		push_language,
		push_answer,
		push_title,
		push_type,
		createdtime,
		updatetime,
		createUser,
		updateUser,
		deleted,
		teacher_id,
		teacher_name,
		assistant_name,
		assistant_id
    </sql>
	<sql id="entity_properties">
		#{id},
		#{classId},
		#{className},
		#{courseTime},
		#{status},
		#{courseId},
		#{courseName},
		#{pushLanguage},
		#{pushAnswer},
		#{pushTitle},
		#{pushType},
		#{createdtime},
		#{updatetime},
		#{createUser},
		#{updateUser},
		#{deleted},
		#{teacherId},
		#{teacherName},
		#{assistantName},
		#{assistantId}
	</sql>
	
	<!-- 适用于主键自增类型 -->
	<insert id="save" parameterType="StuDaily" useGeneratedKeys="true" keyProperty="id">
		insert into data_stu_daily( <include refid="table_columns" /> ) 
		values ( <include refid="entity_properties" /> )
	</insert>
	
	<delete id="deleteByIds">
		delete from data_stu_daily
		where id in
		<foreach item="item" collection="array" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
	
	<update id="update" parameterType="StuDaily">
		update data_stu_daily 
		<trim prefix="set" suffixOverrides=",">
			<if test="classId != null and classId != ''">class_id = #{classId},</if>
			<if test="className != null and className != ''">class_name = #{className},</if>
			<if test="courseTime != null and courseTime != ''">course_time = #{courseTime},</if>
			<if test="status != null and status != ''">status = #{status},</if>
			<if test="courseId != null and courseId != ''">course_id = #{courseId},</if>
			<if test="courseName != null and courseName != ''">course_name = #{courseName},</if>
			<if test="pushLanguage != null and pushLanguage != ''">push_language = #{pushLanguage},</if>
			<if test="pushAnswer != null and pushAnswer != ''">push_answer = #{pushAnswer},</if>
			<if test="pushTitle != null and pushTitle != ''">push_title = #{pushTitle},</if>
			<if test="pushType != null and pushType != ''">push_type = #{pushType},</if>
			<if test="createdtime != null and createdtime != ''">createdtime = #{createdtime},</if>
			<if test="updatetime != null and updatetime != ''">updatetime = #{updatetime},</if>
			<if test="createUser != null and createUser != ''">createUser = #{createUser},</if>
			<if test="updateUser != null and updateUser != ''">updateUser = #{updateUser},</if>
			<if test="deleted != null and deleted != ''">deleted = #{deleted},</if>
			<if test="teacherId != null and teacherId != ''">teacher_id = #{teacherId},</if>
			<if test="teacherName != null and teacherName != ''">teacher_name = #{teacherName},</if>
			<if test="assistantName != null and assistantName != ''">assistant_name = #{assistantName},</if>
			<if test="assistantId != null and assistantId != ''">assistant_id = #{assistantId},</if>
		</trim>
		<where>id = #{id}</where>
	</update>
	
	<select id="findById" resultMap="stuDailyResultMap" parameterType="String" >
		select <include refid="table_columns" />
		from data_stu_daily
		where id = #{id}
	</select>
	
	<select id="queryAll" resultMap="stuDailyResultMap">
		select <include refid="table_columns" /> 
		from data_stu_daily
	</select>
	
	<!-- 使用like用法：columnName like concat('%',#columnName#,'%') -->
	<sql id="page_where">
		<trim prefix="where" prefixOverrides="and | or ">
			<if test="classId != null and classId != ''">and class_id = #{classId}</if>
			<if test="className != null and className != ''">and class_name = #{className}</if>
			<if test="courseTime != null and courseTime != ''">and course_time = #{courseTime}</if>
			<if test="status != null and status != ''">and status = #{status}</if>
			<if test="courseId != null and courseId != ''">and course_id = #{courseId}</if>
			<if test="courseName != null and courseName != ''">and course_name = #{courseName}</if>
			<if test="pushLanguage != null and pushLanguage != ''">and push_language = #{pushLanguage}</if>
			<if test="pushAnswer != null and pushAnswer != ''">and push_answer = #{pushAnswer}</if>
			<if test="pushTitle != null and pushTitle != ''">and push_title = #{pushTitle}</if>
			<if test="pushType != null and pushType != ''">and push_type = #{pushType}</if>
			<if test="createdtime != null and createdtime != ''">and createdtime = #{createdtime}</if>
			<if test="updatetime != null and updatetime != ''">and updatetime = #{updatetime}</if>
			<if test="createUser != null and createUser != ''">and createUser = #{createUser}</if>
			<if test="updateUser != null and updateUser != ''">and updateUser = #{updateUser}</if>
			<if test="deleted != null and deleted != ''">and deleted = #{deleted}</if>
			<if test="teacherId != null and teacherId != ''">and teacher_id = #{teacherId}</if>
			<if test="teacherName != null and teacherName != ''">and teacher_name = #{teacherName}</if>
			<if test="assistantName != null and assistantName != ''">and assistant_name = #{assistantName}</if>
			<if test="assistantId != null and assistantId != ''">and assistant_id = #{assistantId}</if>
		</trim>
	</sql>
	
	<select id="page" resultMap="stuDailyResultMap" parameterType="StuDailySearch">
		select <include refid="table_columns" />
		from data_stu_daily
		<include refid="page_where" />
		limit #{firstIndex},#{pageSize}
	</select>
	
	<select id="pageCount" resultType="int" parameterType="StuDailySearch">
		select count(id) from data_stu_daily
		<include refid="page_where" />
	</select>
	
	<!-- 其他自定义SQL -->
	
</mapper>