<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testpro.data.timeAttitude.bean.TimeAttitude">
	<resultMap type="TimeAttitude" id="timeAttitudeResultMap">
		<result property="id" column="id" />
		<result property="courseId" column="course_id" />
		<result property="timestamp" column="timestamp" />
		<result property="attitude" column="attitude" />
		<result property="userAttitude" column="user_attitude" />
		<result property="clientId" column="client_id" />
	</resultMap>
	
	<sql id="table_columns">
		id,
		course_id,
		timestamp,
		attitude,
		user_attitude,
		client_id
    </sql>
	<sql id="entity_properties">
		#{id},
		#{courseId},
		#{timestamp},
		#{attitude},
		#{userAttitude},
		#{clientId}
	</sql>
	
	<!-- 适用于主键自增类型 -->
	<insert id="save" parameterType="TimeAttitude" useGeneratedKeys="true" keyProperty="id">
		insert into data_time_attitude( <include refid="table_columns" /> ) 
		values ( <include refid="entity_properties" /> )
	</insert>
	
	<delete id="deleteByIds">
		delete from data_time_attitude
		where id in
		<foreach item="item" collection="array" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
	
	<update id="update" parameterType="TimeAttitude">
		update data_time_attitude 
		<trim prefix="set" suffixOverrides=",">
			<if test="courseId != null and courseId != ''">course_id = #{courseId},</if>
			<if test="timestamp != null and timestamp != ''">timestamp = #{timestamp},</if>
			<if test="attitude != null and attitude != ''">attitude = #{attitude},</if>
			<if test="userAttitude != null and userAttitude != ''">user_attitude = #{userAttitude},</if>
			<if test="clientId != null and clientId != ''">client_id = #{clientId},</if>
		</trim>
		<where>id = #{id}</where>
	</update>
	
	<select id="findById" resultMap="timeAttitudeResultMap" parameterType="String" >
		select <include refid="table_columns" />
		from data_time_attitude
		where id = #{id}
	</select>
	
	<select id="queryAll" resultMap="timeAttitudeResultMap">
		select <include refid="table_columns" /> 
		from data_time_attitude
	</select>
	
	<!-- 使用like用法：columnName like concat('%',#columnName#,'%') -->
	<sql id="page_where">
		<trim prefix="where" prefixOverrides="and | or ">
			<if test="courseId != null and courseId != ''">and course_id = #{courseId}</if>
			<if test="timestamp != null and timestamp != ''">and timestamp = #{timestamp}</if>
			<if test="attitude != null and attitude != ''">and attitude = #{attitude}</if>
			<if test="userAttitude != null and userAttitude != ''">and user_attitude = #{userAttitude}</if>
			<if test="clientId != null and clientId != ''">and client_id = #{clientId}</if>
		</trim>
	</sql>
	
	<select id="page" resultMap="timeAttitudeResultMap" parameterType="TimeAttitudeSearch">
		select <include refid="table_columns" />
		from data_time_attitude
		<include refid="page_where" />
		limit #{firstIndex},#{pageSize}
	</select>
	
	<select id="pageCount" resultType="int" parameterType="TimeAttitudeSearch">
		select count(id) from data_time_attitude
		<include refid="page_where" />
	</select>
	
	<!-- 其他自定义SQL -->
	
</mapper>