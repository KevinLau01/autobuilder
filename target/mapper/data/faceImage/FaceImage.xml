<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testpro.data.faceImage.bean.FaceImage">
	<resultMap type="FaceImage" id="faceImageResultMap">
		<result property="id" column="id" />
		<result property="classId" column="class_id" />
		<result property="courseId" column="course_id" />
		<result property="faceId" column="face_id" />
		<result property="imageUrl" column="image_url" />
	</resultMap>
	
	<sql id="table_columns">
		id,
		class_id,
		course_id,
		face_id,
		image_url
    </sql>
	<sql id="entity_properties">
		#{id},
		#{classId},
		#{courseId},
		#{faceId},
		#{imageUrl}
	</sql>
	
	<!-- 适用于主键自增类型 -->
	<insert id="save" parameterType="FaceImage" useGeneratedKeys="true" keyProperty="id">
		insert into data_face_image( <include refid="table_columns" /> ) 
		values ( <include refid="entity_properties" /> )
	</insert>
	
	<delete id="deleteByIds">
		delete from data_face_image
		where id in
		<foreach item="item" collection="array" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
	
	<update id="update" parameterType="FaceImage">
		update data_face_image 
		<trim prefix="set" suffixOverrides=",">
			<if test="classId != null and classId != ''">class_id = #{classId},</if>
			<if test="courseId != null and courseId != ''">course_id = #{courseId},</if>
			<if test="faceId != null and faceId != ''">face_id = #{faceId},</if>
			<if test="imageUrl != null and imageUrl != ''">image_url = #{imageUrl},</if>
		</trim>
		<where>id = #{id}</where>
	</update>
	
	<select id="findById" resultMap="faceImageResultMap" parameterType="String" >
		select <include refid="table_columns" />
		from data_face_image
		where id = #{id}
	</select>
	
	<select id="queryAll" resultMap="faceImageResultMap">
		select <include refid="table_columns" /> 
		from data_face_image
	</select>
	
	<!-- 使用like用法：columnName like concat('%',#columnName#,'%') -->
	<sql id="page_where">
		<trim prefix="where" prefixOverrides="and | or ">
			<if test="classId != null and classId != ''">and class_id = #{classId}</if>
			<if test="courseId != null and courseId != ''">and course_id = #{courseId}</if>
			<if test="faceId != null and faceId != ''">and face_id = #{faceId}</if>
			<if test="imageUrl != null and imageUrl != ''">and image_url = #{imageUrl}</if>
		</trim>
	</sql>
	
	<select id="page" resultMap="faceImageResultMap" parameterType="FaceImageSearch">
		select <include refid="table_columns" />
		from data_face_image
		<include refid="page_where" />
		limit #{firstIndex},#{pageSize}
	</select>
	
	<select id="pageCount" resultType="int" parameterType="FaceImageSearch">
		select count(id) from data_face_image
		<include refid="page_where" />
	</select>
	
	<!-- 其他自定义SQL -->
	
</mapper>