<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testpro.data.userDimension.bean.UserDimension">
	<resultMap type="UserDimension" id="userDimensionResultMap">
		<result property="id" column="id" />
		<result property="courseId" column="course_id" />
		<result property="timestamp" column="timestamp" />
		<result property="userId" column="user_id" />
		<result property="userData" column="user_data" />
		<result property="userHeadimg" column="user_headimg" />
		<result property="clientId" column="client_id" />
		<result property="userAttitudeData" column="user_attitude_data" />
		<result property="userEmotionData" column="user_emotion_data" />
	</resultMap>
	
	<sql id="table_columns">
		id,
		course_id,
		timestamp,
		user_id,
		user_data,
		user_headimg,
		client_id,
		user_attitude_data,
		user_emotion_data
    </sql>
	<sql id="entity_properties">
		#{id},
		#{courseId},
		#{timestamp},
		#{userId},
		#{userData},
		#{userHeadimg},
		#{clientId},
		#{userAttitudeData},
		#{userEmotionData}
	</sql>
	
	<!-- 适用于主键自增类型 -->
	<insert id="save" parameterType="UserDimension" useGeneratedKeys="true" keyProperty="id">
		insert into data_user_dimension( <include refid="table_columns" /> ) 
		values ( <include refid="entity_properties" /> )
	</insert>
	
	<delete id="deleteByIds">
		delete from data_user_dimension
		where id in
		<foreach item="item" collection="array" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
	
	<update id="update" parameterType="UserDimension">
		update data_user_dimension 
		<trim prefix="set" suffixOverrides=",">
			<if test="courseId != null and courseId != ''">course_id = #{courseId},</if>
			<if test="timestamp != null and timestamp != ''">timestamp = #{timestamp},</if>
			<if test="userId != null and userId != ''">user_id = #{userId},</if>
			<if test="userData != null and userData != ''">user_data = #{userData},</if>
			<if test="userHeadimg != null and userHeadimg != ''">user_headimg = #{userHeadimg},</if>
			<if test="clientId != null and clientId != ''">client_id = #{clientId},</if>
			<if test="userAttitudeData != null and userAttitudeData != ''">user_attitude_data = #{userAttitudeData},</if>
			<if test="userEmotionData != null and userEmotionData != ''">user_emotion_data = #{userEmotionData},</if>
		</trim>
		<where>id = #{id}</where>
	</update>
	
	<select id="findById" resultMap="userDimensionResultMap" parameterType="String" >
		select <include refid="table_columns" />
		from data_user_dimension
		where id = #{id}
	</select>
	
	<select id="queryAll" resultMap="userDimensionResultMap">
		select <include refid="table_columns" /> 
		from data_user_dimension
	</select>
	
	<!-- 使用like用法：columnName like concat('%',#columnName#,'%') -->
	<sql id="page_where">
		<trim prefix="where" prefixOverrides="and | or ">
			<if test="courseId != null and courseId != ''">and course_id = #{courseId}</if>
			<if test="timestamp != null and timestamp != ''">and timestamp = #{timestamp}</if>
			<if test="userId != null and userId != ''">and user_id = #{userId}</if>
			<if test="userData != null and userData != ''">and user_data = #{userData}</if>
			<if test="userHeadimg != null and userHeadimg != ''">and user_headimg = #{userHeadimg}</if>
			<if test="clientId != null and clientId != ''">and client_id = #{clientId}</if>
			<if test="userAttitudeData != null and userAttitudeData != ''">and user_attitude_data = #{userAttitudeData}</if>
			<if test="userEmotionData != null and userEmotionData != ''">and user_emotion_data = #{userEmotionData}</if>
		</trim>
	</sql>
	
	<select id="page" resultMap="userDimensionResultMap" parameterType="UserDimensionSearch">
		select <include refid="table_columns" />
		from data_user_dimension
		<include refid="page_where" />
		limit #{firstIndex},#{pageSize}
	</select>
	
	<select id="pageCount" resultType="int" parameterType="UserDimensionSearch">
		select count(id) from data_user_dimension
		<include refid="page_where" />
	</select>
	
	<!-- 其他自定义SQL -->
	
</mapper>