<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testpro.data.timeAbsorbed.bean.TimeAbsorbed">
	<resultMap type="TimeAbsorbed" id="timeAbsorbedResultMap">
		<result property="id" column="id" />
		<result property="courseId" column="course_id" />
		<result property="timestamp" column="timestamp" />
		<result property="absorbed" column="absorbed" />
		<result property="userAbsorbed" column="user_absorbed" />
		<result property="clientId" column="client_id" />
	</resultMap>
	
	<sql id="table_columns">
		id,
		course_id,
		timestamp,
		absorbed,
		user_absorbed,
		client_id
    </sql>
	<sql id="entity_properties">
		#{id},
		#{courseId},
		#{timestamp},
		#{absorbed},
		#{userAbsorbed},
		#{clientId}
	</sql>
	
	<!-- 适用于主键自增类型 -->
	<insert id="save" parameterType="TimeAbsorbed" useGeneratedKeys="true" keyProperty="id">
		insert into data_time_absorbed( <include refid="table_columns" /> ) 
		values ( <include refid="entity_properties" /> )
	</insert>
	
	<delete id="deleteByIds">
		delete from data_time_absorbed
		where id in
		<foreach item="item" collection="array" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
	
	<update id="update" parameterType="TimeAbsorbed">
		update data_time_absorbed 
		<trim prefix="set" suffixOverrides=",">
			<if test="courseId != null and courseId != ''">course_id = #{courseId},</if>
			<if test="timestamp != null and timestamp != ''">timestamp = #{timestamp},</if>
			<if test="absorbed != null and absorbed != ''">absorbed = #{absorbed},</if>
			<if test="userAbsorbed != null and userAbsorbed != ''">user_absorbed = #{userAbsorbed},</if>
			<if test="clientId != null and clientId != ''">client_id = #{clientId},</if>
		</trim>
		<where>id = #{id}</where>
	</update>
	
	<select id="findById" resultMap="timeAbsorbedResultMap" parameterType="String" >
		select <include refid="table_columns" />
		from data_time_absorbed
		where id = #{id}
	</select>
	
	<select id="queryAll" resultMap="timeAbsorbedResultMap">
		select <include refid="table_columns" /> 
		from data_time_absorbed
	</select>
	
	<!-- 使用like用法：columnName like concat('%',#columnName#,'%') -->
	<sql id="page_where">
		<trim prefix="where" prefixOverrides="and | or ">
			<if test="courseId != null and courseId != ''">and course_id = #{courseId}</if>
			<if test="timestamp != null and timestamp != ''">and timestamp = #{timestamp}</if>
			<if test="absorbed != null and absorbed != ''">and absorbed = #{absorbed}</if>
			<if test="userAbsorbed != null and userAbsorbed != ''">and user_absorbed = #{userAbsorbed}</if>
			<if test="clientId != null and clientId != ''">and client_id = #{clientId}</if>
		</trim>
	</sql>
	
	<select id="page" resultMap="timeAbsorbedResultMap" parameterType="TimeAbsorbedSearch">
		select <include refid="table_columns" />
		from data_time_absorbed
		<include refid="page_where" />
		limit #{firstIndex},#{pageSize}
	</select>
	
	<select id="pageCount" resultType="int" parameterType="TimeAbsorbedSearch">
		select count(id) from data_time_absorbed
		<include refid="page_where" />
	</select>
	
	<!-- 其他自定义SQL -->
	
</mapper>