<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testpro.data.postvideo.bean.Postvideo">
	<resultMap type="Postvideo" id="postvideoResultMap">
		<result property="id" column="id" />
		<result property="classId" column="class_id" />
		<result property="liveId" column="live_id" />
		<result property="courseNumber" column="course_number" />
		<result property="videoName" column="video_name" />
		<result property="videoUrl" column="video_url" />
		<result property="createdAt" column="created_at" />
		<result property="updatedAt" column="updated_at" />
		<result property="deletedAt" column="deleted_at" />
	</resultMap>
	
	<sql id="table_columns">
		id,
		class_id,
		live_id,
		course_number,
		video_name,
		video_url,
		created_at,
		updated_at,
		deleted_at
    </sql>
	<sql id="entity_properties">
		#{id},
		#{classId},
		#{liveId},
		#{courseNumber},
		#{videoName},
		#{videoUrl},
		#{createdAt},
		#{updatedAt},
		#{deletedAt}
	</sql>
	
	<!-- 适用于主键自增类型 -->
	<insert id="save" parameterType="Postvideo" useGeneratedKeys="true" keyProperty="id">
		insert into data_postvideo( <include refid="table_columns" /> ) 
		values ( <include refid="entity_properties" /> )
	</insert>
	
	<delete id="deleteByIds">
		delete from data_postvideo
		where id in
		<foreach item="item" collection="array" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
	
	<update id="update" parameterType="Postvideo">
		update data_postvideo 
		<trim prefix="set" suffixOverrides=",">
			<if test="classId != null and classId != ''">class_id = #{classId},</if>
			<if test="liveId != null and liveId != ''">live_id = #{liveId},</if>
			<if test="courseNumber != null and courseNumber != ''">course_number = #{courseNumber},</if>
			<if test="videoName != null and videoName != ''">video_name = #{videoName},</if>
			<if test="videoUrl != null and videoUrl != ''">video_url = #{videoUrl},</if>
			<if test="createdAt != null and createdAt != ''">created_at = #{createdAt},</if>
			<if test="updatedAt != null and updatedAt != ''">updated_at = #{updatedAt},</if>
			<if test="deletedAt != null and deletedAt != ''">deleted_at = #{deletedAt},</if>
		</trim>
		<where>id = #{id}</where>
	</update>
	
	<select id="findById" resultMap="postvideoResultMap" parameterType="String" >
		select <include refid="table_columns" />
		from data_postvideo
		where id = #{id}
	</select>
	
	<select id="queryAll" resultMap="postvideoResultMap">
		select <include refid="table_columns" /> 
		from data_postvideo
	</select>
	
	<!-- 使用like用法：columnName like concat('%',#columnName#,'%') -->
	<sql id="page_where">
		<trim prefix="where" prefixOverrides="and | or ">
			<if test="classId != null and classId != ''">and class_id = #{classId}</if>
			<if test="liveId != null and liveId != ''">and live_id = #{liveId}</if>
			<if test="courseNumber != null and courseNumber != ''">and course_number = #{courseNumber}</if>
			<if test="videoName != null and videoName != ''">and video_name = #{videoName}</if>
			<if test="videoUrl != null and videoUrl != ''">and video_url = #{videoUrl}</if>
			<if test="createdAt != null and createdAt != ''">and created_at = #{createdAt}</if>
			<if test="updatedAt != null and updatedAt != ''">and updated_at = #{updatedAt}</if>
			<if test="deletedAt != null and deletedAt != ''">and deleted_at = #{deletedAt}</if>
		</trim>
	</sql>
	
	<select id="page" resultMap="postvideoResultMap" parameterType="PostvideoSearch">
		select <include refid="table_columns" />
		from data_postvideo
		<include refid="page_where" />
		limit #{firstIndex},#{pageSize}
	</select>
	
	<select id="pageCount" resultType="int" parameterType="PostvideoSearch">
		select count(id) from data_postvideo
		<include refid="page_where" />
	</select>
	
	<!-- 其他自定义SQL -->
	
</mapper>