<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testpro.data.classReport.bean.ClassReport">
	<resultMap type="ClassReport" id="classReportResultMap">
		<result property="id" column="id" />
		<result property="courseId" column="course_id" />
		<result property="classId" column="class_id" />
		<result property="focusCurve" column="focus_curve" />
		<result property="focusTopStuId" column="focus_top_stu_id" />
		<result property="activeCurve" column="active_curve" />
		<result property="activeTopStuId" column="active_top_stu_id" />
		<result property="pleasureCurve" column="pleasure_curve" />
		<result property="stuNum" column="stu_num" />
		<result property="createrAt" column="creater_at" />
	</resultMap>
	
	<sql id="table_columns">
		id,
		course_id,
		class_id,
		focus_curve,
		focus_top_stu_id,
		active_curve,
		active_top_stu_id,
		pleasure_curve,
		stu_num,
		creater_at
    </sql>
	<sql id="entity_properties">
		#{id},
		#{courseId},
		#{classId},
		#{focusCurve},
		#{focusTopStuId},
		#{activeCurve},
		#{activeTopStuId},
		#{pleasureCurve},
		#{stuNum},
		#{createrAt}
	</sql>
	
	<!-- 适用于主键自增类型 -->
	<insert id="save" parameterType="ClassReport" useGeneratedKeys="true" keyProperty="id">
		insert into data_class_report( <include refid="table_columns" /> ) 
		values ( <include refid="entity_properties" /> )
	</insert>
	
	<delete id="deleteByIds">
		delete from data_class_report
		where id in
		<foreach item="item" collection="array" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
	
	<update id="update" parameterType="ClassReport">
		update data_class_report 
		<trim prefix="set" suffixOverrides=",">
			<if test="courseId != null and courseId != ''">course_id = #{courseId},</if>
			<if test="classId != null and classId != ''">class_id = #{classId},</if>
			<if test="focusCurve != null and focusCurve != ''">focus_curve = #{focusCurve},</if>
			<if test="focusTopStuId != null and focusTopStuId != ''">focus_top_stu_id = #{focusTopStuId},</if>
			<if test="activeCurve != null and activeCurve != ''">active_curve = #{activeCurve},</if>
			<if test="activeTopStuId != null and activeTopStuId != ''">active_top_stu_id = #{activeTopStuId},</if>
			<if test="pleasureCurve != null and pleasureCurve != ''">pleasure_curve = #{pleasureCurve},</if>
			<if test="stuNum != null and stuNum != ''">stu_num = #{stuNum},</if>
			<if test="createrAt != null and createrAt != ''">creater_at = #{createrAt},</if>
		</trim>
		<where>id = #{id}</where>
	</update>
	
	<select id="findById" resultMap="classReportResultMap" parameterType="String" >
		select <include refid="table_columns" />
		from data_class_report
		where id = #{id}
	</select>
	
	<select id="queryAll" resultMap="classReportResultMap">
		select <include refid="table_columns" /> 
		from data_class_report
	</select>
	
	<!-- 使用like用法：columnName like concat('%',#columnName#,'%') -->
	<sql id="page_where">
		<trim prefix="where" prefixOverrides="and | or ">
			<if test="courseId != null and courseId != ''">and course_id = #{courseId}</if>
			<if test="classId != null and classId != ''">and class_id = #{classId}</if>
			<if test="focusCurve != null and focusCurve != ''">and focus_curve = #{focusCurve}</if>
			<if test="focusTopStuId != null and focusTopStuId != ''">and focus_top_stu_id = #{focusTopStuId}</if>
			<if test="activeCurve != null and activeCurve != ''">and active_curve = #{activeCurve}</if>
			<if test="activeTopStuId != null and activeTopStuId != ''">and active_top_stu_id = #{activeTopStuId}</if>
			<if test="pleasureCurve != null and pleasureCurve != ''">and pleasure_curve = #{pleasureCurve}</if>
			<if test="stuNum != null and stuNum != ''">and stu_num = #{stuNum}</if>
			<if test="createrAt != null and createrAt != ''">and creater_at = #{createrAt}</if>
		</trim>
	</sql>
	
	<select id="page" resultMap="classReportResultMap" parameterType="ClassReportSearch">
		select <include refid="table_columns" />
		from data_class_report
		<include refid="page_where" />
		limit #{firstIndex},#{pageSize}
	</select>
	
	<select id="pageCount" resultType="int" parameterType="ClassReportSearch">
		select count(id) from data_class_report
		<include refid="page_where" />
	</select>
	
	<!-- 其他自定义SQL -->
	
</mapper>