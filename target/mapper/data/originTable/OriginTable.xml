<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testpro.data.originTable.bean.OriginTable">
	<resultMap type="OriginTable" id="originTableResultMap">
		<result property="id" column="id" />
		<result property="courseId" column="course_id" />
		<result property="stuId" column="stu_id" />
		<result property="clientId" column="client_id" />
		<result property="type" column="type" />
		<result property="data" column="data" />
		<result property="createdAt" column="created_at" />
		<result property="updatedAt" column="updated_at" />
		<result property="deletedAt" column="deleted_at" />
	</resultMap>
	
	<sql id="table_columns">
		id,
		course_id,
		stu_id,
		client_id,
		type,
		data,
		created_at,
		updated_at,
		deleted_at
    </sql>
	<sql id="entity_properties">
		#{id},
		#{courseId},
		#{stuId},
		#{clientId},
		#{type},
		#{data},
		#{createdAt},
		#{updatedAt},
		#{deletedAt}
	</sql>
	
	<!-- 适用于主键自增类型 -->
	<insert id="save" parameterType="OriginTable" useGeneratedKeys="true" keyProperty="id">
		insert into data_origin_table( <include refid="table_columns" /> ) 
		values ( <include refid="entity_properties" /> )
	</insert>
	
	<delete id="deleteByIds">
		delete from data_origin_table
		where id in
		<foreach item="item" collection="array" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
	
	<update id="update" parameterType="OriginTable">
		update data_origin_table 
		<trim prefix="set" suffixOverrides=",">
			<if test="courseId != null and courseId != ''">course_id = #{courseId},</if>
			<if test="stuId != null and stuId != ''">stu_id = #{stuId},</if>
			<if test="clientId != null and clientId != ''">client_id = #{clientId},</if>
			<if test="type != null and type != ''">type = #{type},</if>
			<if test="data != null and data != ''">data = #{data},</if>
			<if test="createdAt != null and createdAt != ''">created_at = #{createdAt},</if>
			<if test="updatedAt != null and updatedAt != ''">updated_at = #{updatedAt},</if>
			<if test="deletedAt != null and deletedAt != ''">deleted_at = #{deletedAt},</if>
		</trim>
		<where>id = #{id}</where>
	</update>
	
	<select id="findById" resultMap="originTableResultMap" parameterType="String" >
		select <include refid="table_columns" />
		from data_origin_table
		where id = #{id}
	</select>
	
	<select id="queryAll" resultMap="originTableResultMap">
		select <include refid="table_columns" /> 
		from data_origin_table
	</select>
	
	<!-- 使用like用法：columnName like concat('%',#columnName#,'%') -->
	<sql id="page_where">
		<trim prefix="where" prefixOverrides="and | or ">
			<if test="courseId != null and courseId != ''">and course_id = #{courseId}</if>
			<if test="stuId != null and stuId != ''">and stu_id = #{stuId}</if>
			<if test="clientId != null and clientId != ''">and client_id = #{clientId}</if>
			<if test="type != null and type != ''">and type = #{type}</if>
			<if test="data != null and data != ''">and data = #{data}</if>
			<if test="createdAt != null and createdAt != ''">and created_at = #{createdAt}</if>
			<if test="updatedAt != null and updatedAt != ''">and updated_at = #{updatedAt}</if>
			<if test="deletedAt != null and deletedAt != ''">and deleted_at = #{deletedAt}</if>
		</trim>
	</sql>
	
	<select id="page" resultMap="originTableResultMap" parameterType="OriginTableSearch">
		select <include refid="table_columns" />
		from data_origin_table
		<include refid="page_where" />
		limit #{firstIndex},#{pageSize}
	</select>
	
	<select id="pageCount" resultType="int" parameterType="OriginTableSearch">
		select count(id) from data_origin_table
		<include refid="page_where" />
	</select>
	
	<!-- 其他自定义SQL -->
	
</mapper>