<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testpro.data.timeEmotion.bean.TimeEmotion">
	<resultMap type="TimeEmotion" id="timeEmotionResultMap">
		<result property="id" column="id" />
		<result property="courseId" column="course_id" />
		<result property="timestamp" column="timestamp" />
		<result property="emotion" column="emotion" />
		<result property="userEmotion" column="user_emotion" />
		<result property="clientId" column="client_id" />
	</resultMap>
	
	<sql id="table_columns">
		id,
		course_id,
		timestamp,
		emotion,
		user_emotion,
		client_id
    </sql>
	<sql id="entity_properties">
		#{id},
		#{courseId},
		#{timestamp},
		#{emotion},
		#{userEmotion},
		#{clientId}
	</sql>
	
	<!-- 适用于主键自增类型 -->
	<insert id="save" parameterType="TimeEmotion" useGeneratedKeys="true" keyProperty="id">
		insert into data_time_emotion( <include refid="table_columns" /> ) 
		values ( <include refid="entity_properties" /> )
	</insert>
	
	<delete id="deleteByIds">
		delete from data_time_emotion
		where id in
		<foreach item="item" collection="array" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
	
	<update id="update" parameterType="TimeEmotion">
		update data_time_emotion 
		<trim prefix="set" suffixOverrides=",">
			<if test="courseId != null and courseId != ''">course_id = #{courseId},</if>
			<if test="timestamp != null and timestamp != ''">timestamp = #{timestamp},</if>
			<if test="emotion != null and emotion != ''">emotion = #{emotion},</if>
			<if test="userEmotion != null and userEmotion != ''">user_emotion = #{userEmotion},</if>
			<if test="clientId != null and clientId != ''">client_id = #{clientId},</if>
		</trim>
		<where>id = #{id}</where>
	</update>
	
	<select id="findById" resultMap="timeEmotionResultMap" parameterType="String" >
		select <include refid="table_columns" />
		from data_time_emotion
		where id = #{id}
	</select>
	
	<select id="queryAll" resultMap="timeEmotionResultMap">
		select <include refid="table_columns" /> 
		from data_time_emotion
	</select>
	
	<!-- 使用like用法：columnName like concat('%',#columnName#,'%') -->
	<sql id="page_where">
		<trim prefix="where" prefixOverrides="and | or ">
			<if test="courseId != null and courseId != ''">and course_id = #{courseId}</if>
			<if test="timestamp != null and timestamp != ''">and timestamp = #{timestamp}</if>
			<if test="emotion != null and emotion != ''">and emotion = #{emotion}</if>
			<if test="userEmotion != null and userEmotion != ''">and user_emotion = #{userEmotion}</if>
			<if test="clientId != null and clientId != ''">and client_id = #{clientId}</if>
		</trim>
	</sql>
	
	<select id="page" resultMap="timeEmotionResultMap" parameterType="TimeEmotionSearch">
		select <include refid="table_columns" />
		from data_time_emotion
		<include refid="page_where" />
		limit #{firstIndex},#{pageSize}
	</select>
	
	<select id="pageCount" resultType="int" parameterType="TimeEmotionSearch">
		select count(id) from data_time_emotion
		<include refid="page_where" />
	</select>
	
	<!-- 其他自定义SQL -->
	
</mapper>